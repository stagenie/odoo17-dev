<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==================== PRODUCTION JOURNALIÈRE ==================== -->

    <!-- Vue Formulaire -->
    <record id="ron_daily_production_view_form" model="ir.ui.view">
        <field name="name">ron.daily.production.form</field>
        <field name="model">ron.daily.production</field>
        <field name="arch" type="xml">
            <form string="Production Journalière">
                <header>
                    <button name="action_print_production_report" string="Imprimer"
                            type="object" class="btn-warning" icon="fa-print"/>
                    <button name="action_confirm" string="Confirmer et Calculer"
                            type="object" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_validate" string="Valider et Générer Documents"
                            type="object" class="btn-success"
                            invisible="state != 'confirmed'"/>
                    <button name="action_done" string="Terminer"
                            type="object" class="btn-success"
                            invisible="state != 'validated'"/>
                    <button name="action_reset_draft" string="Remettre en Brouillon"
                            type="object"
                            invisible="state in ('draft', 'done')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,validated,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_consumption_picking"
                                type="object" class="oe_stat_button" icon="fa-truck"
                                invisible="not picking_consumption_id">
                            <field name="picking_consumption_id" invisible="1"/>
                            <span>BL Conso. MP</span>
                        </button>
                        <button name="action_view_packaging_picking"
                                type="object" class="oe_stat_button" icon="fa-cube"
                                invisible="not picking_packaging_id">
                            <field name="picking_packaging_id" invisible="1"/>
                            <span>BL Conso. Emb.</span>
                        </button>
                        <button name="action_view_finished_purchase"
                                type="object" class="oe_stat_button" icon="fa-shopping-cart"
                                invisible="not purchase_finished_id">
                            <field name="purchase_finished_id" invisible="1"/>
                            <span>Achat Prod. Finis</span>
                        </button>
                        <button name="action_view_scrap_purchase"
                                type="object" class="oe_stat_button" icon="fa-recycle"
                                invisible="not purchase_scrap_id">
                            <field name="purchase_scrap_id" invisible="1"/>
                            <span>Achat Rebuts</span>
                        </button>
                        <button name="action_view_paste_purchase"
                                type="object" class="oe_stat_button" icon="fa-circle"
                                invisible="not purchase_paste_id">
                            <field name="purchase_paste_id" invisible="1"/>
                            <span>Achat Pâte</span>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="production_date"/>
                            <field name="production_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Onglet Consommations (EN PREMIER) -->
                        <page string="Consommations" name="consumptions">
                            <div class="mb-3" invisible="state != 'draft'">
                                <button name="action_load_from_template" type="object"
                                        string="Charger Template"
                                        class="btn-secondary"
                                        icon="fa-list"
                                        confirm="Charger les matières premières depuis le template ? Les lignes existantes seront remplacées."/>
                                <button name="action_recalculate_weights" type="object"
                                        string="Recalculer Poids"
                                        class="btn-info ms-2"
                                        icon="fa-refresh"
                                        title="Recalcule les poids manquants depuis les noms de produits (ex: FARINE 25 KG)"/>
                                <span class="text-muted ms-2">
                                    Charge la liste des matières premières. Les quantités sont à saisir manuellement.
                                </span>
                            </div>
                            <field name="consumption_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="weight_per_unit" readonly="1" optional="hide"/>
                                    <field name="weight_input" optional="show" string="Poids Saisi (kg)"/>
                                    <field name="quantity" optional="show" string="Qté"/>
                                    <field name="product_uom_id" optional="show"/>
                                    <field name="weight_kg" sum="Total Poids"/>
                                    <field name="unit_cost"/>
                                    <field name="total_cost" sum="Total Coût"/>
                                    <field name="stock_available" optional="hide"/>
                                    <field name="notes" optional="hide"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="total_consumption_weight"
                                       class="oe_subtotal_footer_separator"/>
                                <field name="total_consumption_cost"
                                       class="oe_subtotal_footer_separator"/>
                                <field name="cost_per_kg"
                                       class="oe_subtotal_footer_separator oe_right"/>
                            </group>
                        </page>

                        <!-- Onglet Rebuts Récupérables -->
                        <page string="Rebuts Récupérables" name="scraps">
                            <field name="scrap_line_ids"
                                   context="{'default_scrap_type': 'scrap_recoverable'}">
                                <tree editable="bottom">
                                    <field name="scrap_type" column_invisible="1"/>
                                    <field name="product_id" required="1"
                                           domain="[('product_tmpl_id.is_recoverable_scrap', '=', True), ('type', '=', 'product')]"
                                           options="{'no_create': True}"/>
                                    <field name="weight_kg" string="Poids (kg)" sum="Total Poids"/>
                                    <field name="cost_per_kg"/>
                                    <field name="total_cost" sum="Total Coût"/>
                                    <field name="reason"/>
                                    <field name="notes"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="scrap_recoverable_weight"
                                       class="oe_subtotal_footer_separator"
                                       string="Poids Total Rebuts (kg)"/>
                                <field name="scrap_recoverable_cost"
                                       class="oe_subtotal_footer_separator oe_right"
                                       string="Coût Total Rebuts"/>
                            </group>
                            <div class="alert alert-info" role="alert">
                                <strong>Rebuts Récupérables:</strong> Produits vendables issus de la production (brisures, morceaux, etc.).<br/>
                                <em>Filtrage: Seuls les produits marqués "Est un Rebut Récupérable" sont affichés.</em>
                            </div>
                        </page>

                        <!-- Onglet Pâte Récupérable -->
                        <page string="Pâte Récupérable" name="paste">
                            <field name="paste_line_ids"
                                   context="{'default_scrap_type': 'paste_recoverable'}">
                                <tree editable="bottom">
                                    <field name="scrap_type" column_invisible="1"/>
                                    <field name="product_id" required="1"
                                           domain="[('type', '=', 'product')]"/>
                                    <field name="weight_kg" string="Poids (kg)" sum="Total Poids"/>
                                    <field name="cost_per_kg"/>
                                    <field name="total_cost" sum="Total Coût"/>
                                    <field name="reason" string="Observation"/>
                                    <field name="notes"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer">
                                <field name="paste_recoverable_weight"
                                       class="oe_subtotal_footer_separator"
                                       string="Poids Total Pâte (kg)"/>
                                <field name="paste_recoverable_cost"
                                       class="oe_subtotal_footer_separator oe_right"
                                       string="Coût Total Pâte"/>
                            </group>
                            <div class="alert alert-warning" role="alert">
                                <strong>Pâte Récupérable:</strong> Stock valorisé en AVCO (Prix Moyen Pondéré).<br/>
                                Peut être réutilisée comme matière première le lendemain.<br/>
                                <em>Le produit Pâte par défaut est configuré dans les paramètres.</em>
                            </div>
                        </page>

                        <!-- Onglet Emballage -->
                        <page string="Emballage" name="packaging">
                            <!-- SOLO/CLASSICO -->
                            <group invisible="production_type != 'solo_classico'" col="4">
                                <group string="Emballage SOLO">
                                    <field name="emballage_solo_qty" string="Quantité"/>
                                    <field name="emballage_solo_unit_cost" string="Prix Unitaire"/>
                                    <field name="emballage_solo_cost" string="Coût Total" readonly="1"/>
                                </group>
                                <group string="Emballage CLASSICO">
                                    <field name="emballage_classico_qty" string="Quantité"/>
                                    <field name="emballage_classico_unit_cost" string="Prix Unitaire"/>
                                    <field name="emballage_classico_cost" string="Coût Total" readonly="1"/>
                                </group>
                                <group string="Film SOLO">
                                    <field name="film_solo_qty" string="Quantité (kg)"/>
                                    <field name="film_solo_unit_cost" string="Prix/kg"/>
                                    <field name="film_solo_cost" string="Coût Total" readonly="1"/>
                                </group>
                                <group string="Film CLASSICO">
                                    <field name="film_classico_qty" string="Quantité (kg)"/>
                                    <field name="film_classico_unit_cost" string="Prix/kg"/>
                                    <field name="film_classico_cost" string="Coût Total" readonly="1"/>
                                </group>
                            </group>

                            <!-- SANDWICH GF -->
                            <group invisible="production_type != 'sandwich_gf'" col="2">
                                <group string="Emballage Sandwich GF">
                                    <field name="emballage_sandwich_qty" string="Quantité"/>
                                    <field name="emballage_sandwich_unit_cost" string="Prix Unitaire"/>
                                    <field name="emballage_sandwich_cost" string="Coût Total" readonly="1"/>
                                </group>
                                <group string="Film Sandwich GF">
                                    <field name="film_sandwich_qty" string="Quantité (kg)"/>
                                    <field name="film_sandwich_unit_cost" string="Prix/kg"/>
                                    <field name="film_sandwich_cost" string="Coût Total" readonly="1"/>
                                </group>
                            </group>

                            <!-- Totaux -->
                            <group col="4">
                                <group string="Totaux">
                                    <field name="total_emballage_cost" string="Total Emballages"/>
                                    <field name="total_film_cost" string="Total Films"/>
                                </group>
                                <group string="Total Général">
                                    <field name="total_packaging_cost" class="oe_subtotal_footer_separator"/>
                                </group>
                            </group>

                            <!-- Alerte informative -->
                            <div class="alert alert-info" role="alert"
                                 invisible="production_type != 'solo_classico'">
                                <strong>Coûts Emballage (SOLO/CLASSICO):</strong><br/>
                                - Les emballages sont affectés <b>directement</b> par type de produit<br/>
                                - Coût Emb. SOLO / Qté cartons SOLO = Coût emballage par carton SOLO<br/>
                                - Coût Emb. CLASSICO / Qté cartons CLASSICO = Coût emballage par carton CLASSICO<br/>
                                <em>Le ratio s'applique uniquement aux matières premières.</em>
                            </div>
                            <div class="alert alert-info" role="alert"
                                 invisible="production_type != 'sandwich_gf'">
                                <strong>Coûts Emballage (Sandwich GF):</strong><br/>
                                - Coût Total Emballage / Qté cartons Sandwich = Coût emballage par carton
                            </div>
                        </page>

                        <!-- Onglet Produits Finis (AVANT Résumé) -->
                        <page string="Produits Finis" name="finished">
                            <field name="finished_product_ids"
                                   context="{'default_parent_production_type': production_type}">
                                <tree editable="bottom">
                                    <field name="parent_production_type" column_invisible="1"/>
                                    <field name="product_type"/>
                                    <field name="quantity" sum="Total Cartons"/>
                                    <field name="units_per_carton"/>
                                    <field name="total_units" sum="Total Unités"/>
                                    <field name="weight_per_carton" column_invisible="1"/>
                                    <field name="total_weight" column_invisible="1"/>
                                    <field name="unit_cost"/>
                                    <field name="total_cost" sum="Total Coût"/>
                                    <field name="sale_price"/>
                                    <field name="margin"/>
                                    <field name="margin_percent"/>
                                    <field name="total_margin" sum="Marge Totale"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </tree>
                            </field>
                            <!-- Totaux SOLO/CLASSICO -->
                            <group col="4" invisible="production_type != 'solo_classico'">
                                <group string="SOLO">
                                    <field name="qty_solo_cartons"/>
                                    <field name="cost_solo_per_carton"/>
                                    <field name="total_solo_cost"/>
                                </group>
                                <group string="CLASSICO">
                                    <field name="qty_classico_cartons"/>
                                    <field name="cost_classico_per_carton"/>
                                    <field name="total_classico_cost"/>
                                </group>
                            </group>
                            <!-- Totaux Sandwich Grand Format -->
                            <group col="2" invisible="production_type != 'sandwich_gf'">
                                <group string="Sandwich Grand Format">
                                    <field name="qty_sandwich_cartons"/>
                                    <field name="cost_sandwich_per_carton"/>
                                    <field name="total_sandwich_cost"/>
                                </group>
                            </group>
                            <!-- Total tous produits -->
                            <group class="oe_subtotal_footer">
                                <field name="total_cartons_produced" string="Total Cartons"/>
                            </group>
                        </page>

                        <!-- Onglet Résumé -->
                        <page string="Résumé des Coûts" name="summary">
                            <group col="4">
                                <group string="Consommation Matières">
                                    <field name="total_consumption_weight"/>
                                    <field name="total_consumption_cost"/>
                                    <field name="cost_per_kg"/>
                                </group>
                                <group string="Emballage">
                                    <field name="total_emballage_cost" string="Emballages"/>
                                    <field name="total_film_cost" string="Films"/>
                                    <field name="total_packaging_cost"/>
                                </group>
                                <group string="Pertes (Rebuts + Pâte)">
                                    <field name="scrap_recoverable_weight" string="Rebuts (kg)"/>
                                    <field name="paste_recoverable_weight" string="Pâte (kg)"/>
                                    <field name="total_scrap_weight" string="Total Pertes"/>
                                </group>
                                <group string="Production Bonne">
                                    <field name="good_weight"/>
                                    <field name="total_good_cost"/>
                                    <field name="cost_per_kg_good"/>
                                </group>
                            </group>
                            <group>
                                <group string="Documents Générés">
                                    <field name="picking_consumption_id" string="BL Conso. MP"/>
                                    <field name="picking_packaging_id" string="BL Conso. Emballage"/>
                                    <field name="purchase_finished_id"/>
                                    <field name="purchase_scrap_id"/>
                                    <field name="purchase_paste_id"/>
                                </group>
                            </group>
                            <field name="notes" placeholder="Notes et observations..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue Liste -->
    <record id="ron_daily_production_view_tree" model="ir.ui.view">
        <field name="name">ron.daily.production.tree</field>
        <field name="model">ron.daily.production</field>
        <field name="arch" type="xml">
            <tree string="Productions Journalières" decoration-info="state == 'draft'"
                  decoration-warning="state == 'confirmed'"
                  decoration-success="state == 'done'">
                <field name="name"/>
                <field name="production_date"/>
                <field name="production_type" widget="badge"/>
                <field name="total_consumption_weight" string="Poids Conso." optional="show"/>
                <field name="good_weight" string="Poids Bon" optional="show"/>
                <field name="total_cartons_produced" string="Cartons"/>
                <field name="qty_solo_cartons" string="SOLO" optional="show"/>
                <field name="qty_classico_cartons" string="CLASSICO" optional="show"/>
                <field name="qty_sandwich_cartons" string="Sandwich" optional="hide"/>
                <field name="total_consumption_cost" string="Coût MP" optional="hide"/>
                <field name="total_packaging_cost" string="Coût Emb." optional="hide"/>
                <field name="total_good_cost" string="Coût Total" optional="show"/>
                <field name="cost_per_kg" string="Coût/kg MP" optional="hide"/>
                <field name="cost_per_kg_good" string="Coût/kg Bon" optional="show"/>
                <field name="cost_solo_per_carton" string="Coût SOLO" optional="hide"/>
                <field name="cost_classico_per_carton" string="Coût CLASSICO" optional="hide"/>
                <field name="cost_sandwich_per_carton" string="Coût Sandwich" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'confirmed'"
                       decoration-success="state in ('validated', 'done')"/>
                <field name="currency_id" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Vue Recherche -->
    <record id="ron_daily_production_view_search" model="ir.ui.view">
        <field name="name">ron.daily.production.search</field>
        <field name="model">ron.daily.production</field>
        <field name="arch" type="xml">
            <search string="Rechercher Productions">
                <field name="name"/>
                <field name="production_date"/>
                <field name="production_type"/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('production_date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Cette Semaine" name="this_week"
                        domain="[('production_date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                <filter string="Ce Mois" name="this_month"
                        domain="[('production_date', '>=', context_today().strftime('%Y-%m-01'))]"/>
                <separator/>
                <filter string="SOLO/CLASSICO" name="solo_classico" domain="[('production_type', '=', 'solo_classico')]"/>
                <filter string="Sandwich GF" name="sandwich_gf" domain="[('production_type', '=', 'sandwich_gf')]"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Validé" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="Terminé" name="done" domain="[('state', '=', 'done')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Type" name="group_type" context="{'group_by': 'production_type'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'production_date'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Mois" name="group_month" context="{'group_by': 'production_date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vue Pivot -->
    <record id="ron_daily_production_view_pivot" model="ir.ui.view">
        <field name="name">ron.daily.production.pivot</field>
        <field name="model">ron.daily.production</field>
        <field name="arch" type="xml">
            <pivot string="Analyse Productions" default_order="production_date desc">
                <field name="production_type" type="row"/>
                <field name="production_date" type="row" interval="month"/>
                <!-- Poids -->
                <field name="total_consumption_weight" type="measure" string="Poids Conso."/>
                <field name="good_weight" type="measure" string="Poids Bon"/>
                <!-- Coûts -->
                <field name="total_consumption_cost" type="measure" string="Coût MP"/>
                <field name="total_packaging_cost" type="measure" string="Coût Emballage"/>
                <field name="total_good_cost" type="measure" string="Coût Total"/>
                <field name="cost_per_kg_good" type="measure" string="Coût/kg"/>
                <!-- Quantités -->
                <field name="total_cartons_produced" type="measure" string="Total Cartons"/>
                <field name="qty_solo_cartons" type="measure" string="Cartons SOLO"/>
                <field name="qty_classico_cartons" type="measure" string="Cartons CLASSICO"/>
                <field name="qty_sandwich_cartons" type="measure" string="Cartons Sandwich"/>
                <!-- Coûts par carton -->
                <field name="cost_solo_per_carton" type="measure" string="Coût/Carton SOLO"/>
                <field name="cost_classico_per_carton" type="measure" string="Coût/Carton CLASSICO"/>
                <field name="cost_sandwich_per_carton" type="measure" string="Coût/Carton Sandwich"/>
            </pivot>
        </field>
    </record>

    <!-- Vue Graphique -->
    <record id="ron_daily_production_view_graph" model="ir.ui.view">
        <field name="name">ron.daily.production.graph</field>
        <field name="model">ron.daily.production</field>
        <field name="arch" type="xml">
            <graph string="Évolution des Coûts" type="line">
                <field name="production_date"/>
                <field name="production_type" type="row"/>
                <!-- Coûts globaux -->
                <field name="total_consumption_cost" type="measure" string="Coût MP"/>
                <field name="total_packaging_cost" type="measure" string="Coût Emballage"/>
                <field name="total_good_cost" type="measure" string="Coût Total"/>
                <field name="cost_per_kg_good" type="measure" string="Coût/kg Bon"/>
                <!-- Quantités -->
                <field name="total_cartons_produced" type="measure" string="Total Cartons"/>
                <field name="qty_solo_cartons" type="measure" string="SOLO"/>
                <field name="qty_classico_cartons" type="measure" string="CLASSICO"/>
                <field name="qty_sandwich_cartons" type="measure" string="Sandwich"/>
                <!-- Coûts par carton -->
                <field name="cost_solo_per_carton" type="measure" string="Coût SOLO"/>
                <field name="cost_classico_per_carton" type="measure" string="Coût CLASSICO"/>
                <field name="cost_sandwich_per_carton" type="measure" string="Coût Sandwich"/>
            </graph>
        </field>
    </record>

    <!-- Action -->
    <record id="ron_daily_production_action" model="ir.actions.act_window">
        <field name="name">Production Journalière</field>
        <field name="res_model">ron.daily.production</field>
        <field name="view_mode">tree,form,pivot,graph</field>
        <field name="search_view_id" ref="ron_daily_production_view_search"/>
        <field name="context">{'search_default_this_month': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle production journalière
            </p>
            <p>
                Enregistrez les consommations, rebuts et produits finis du jour
                pour calculer automatiquement le coût de revient.
            </p>
        </field>
    </record>

</odoo>
