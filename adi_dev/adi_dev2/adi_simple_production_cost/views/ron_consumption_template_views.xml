<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================== TEMPLATE LINE - TREE VIEW ===================== -->
    <record id="view_ron_consumption_template_line_tree" model="ir.ui.view">
        <field name="name">ron.consumption.template.line.tree</field>
        <field name="model">ron.consumption.template.line</field>
        <field name="arch" type="xml">
            <tree string="Matières Premières" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="product_id"/>
                <field name="uom_id"/>
                <field name="weight_per_unit"/>
            </tree>
        </field>
    </record>

    <!-- ===================== TEMPLATE LINE - FORM VIEW ===================== -->
    <record id="view_ron_consumption_template_line_form" model="ir.ui.view">
        <field name="name">ron.consumption.template.line.form</field>
        <field name="model">ron.consumption.template.line</field>
        <field name="arch" type="xml">
            <form string="Matière Première">
                <group>
                    <group>
                        <field name="product_id"/>
                        <field name="uom_id"/>
                        <field name="weight_per_unit"/>
                    </group>
                    <group>
                        <field name="template_id"/>
                        <field name="sequence"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- ===================== TEMPLATE - TREE VIEW ===================== -->
    <record id="view_ron_consumption_template_tree" model="ir.ui.view">
        <field name="name">ron.consumption.template.tree</field>
        <field name="model">ron.consumption.template</field>
        <field name="arch" type="xml">
            <tree string="Templates de Consommation" decoration-success="active" decoration-muted="not active">
                <field name="name"/>
                <field name="line_count" string="Matières"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <!-- ===================== TEMPLATE - FORM VIEW ===================== -->
    <record id="view_ron_consumption_template_form" model="ir.ui.view">
        <field name="name">ron.consumption.template.form</field>
        <field name="model">ron.consumption.template</field>
        <field name="arch" type="xml">
            <form string="Template de Consommation">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lines" type="object"
                                class="oe_stat_button" icon="fa-list">
                            <field name="line_count" widget="statinfo" string="Matières"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="bg-danger" invisible="active"/>
                    <widget name="web_ribbon" title="Actif" bg_color="bg-success" invisible="not active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom du template"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Matières Premières" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="uom_id"/>
                                    <field name="weight_per_unit"/>
                                </tree>
                            </field>
                            <div class="alert alert-info" role="alert" style="margin-top: 16px;">
                                <strong>Note:</strong> Ce template définit la liste des matières premières utilisées en production.
                                <br/>Les <b>quantités seront saisies manuellement</b> lors de chaque production journalière.
                                <br/>Le <b>poids par unité</b> est pré-rempli mais modifiable lors de la saisie.
                            </div>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ===================== TEMPLATE - SEARCH VIEW ===================== -->
    <record id="view_ron_consumption_template_search" model="ir.ui.view">
        <field name="name">ron.consumption.template.search</field>
        <field name="model">ron.consumption.template</field>
        <field name="arch" type="xml">
            <search string="Recherche Templates">
                <field name="name"/>
                <filter string="Actif" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivés" name="archived" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- ===================== TEMPLATE - ACTION ===================== -->
    <record id="action_ron_consumption_template" model="ir.actions.act_window">
        <field name="name">Template Consommation</field>
        <field name="res_model">ron.consumption.template</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_ron_consumption_template_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre template de consommation
            </p>
            <p>
                Définissez la liste des matières premières utilisées en production.
                <br/>Un seul template actif par société.
                <br/>Les quantités seront saisies manuellement chaque jour.
            </p>
        </field>
    </record>

</odoo>
