<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des transferts de production -->
    <record id="view_picking_tree_production_transfer" model="ir.ui.view">
        <field name="name">stock.picking.tree.production.transfer</field>
        <field name="model">stock.picking</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <tree string="Transferts Production"
                  decoration-info="state == 'draft'"
                  decoration-muted="state == 'cancel'"
                  decoration-success="state == 'done'"
                  decoration-warning="state in ('waiting', 'confirmed')">
                <field name="name"/>
                <field name="origin"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="scheduled_date"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state in ('waiting', 'confirmed', 'assigned')"
                       decoration-success="state == 'done'"/>
                <field name="create_date" optional="show"/>
                <field name="date_done" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban -->
    <record id="view_picking_kanban_production_transfer" model="ir.ui.view">
        <field name="name">stock.picking.kanban.production.transfer</field>
        <field name="model">stock.picking</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="scheduled_date"/>
                <field name="state"/>
                <field name="move_ids"/>
                <progressbar field="state"
                            colors='{"done": "success", "cancel": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <field name="state" widget="label_selection"/>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="text-muted">
                                    <i class="fa fa-truck"/>
                                    <field name="location_id"/> → <field name="location_dest_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-clock-o"/>
                                    <field name="scheduled_date" widget="date"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge rounded-pill">
                                        <t t-esc="record.move_ids.raw_value.length"/> articles
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="create_uid" widget="many2one_avatar_user"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les transferts de production -->
    <record id="action_production_transfers" model="ir.actions.act_window">
        <field name="name">Transferts Production</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,kanban,form,calendar</field>
        <field name="domain">[('picking_type_id.code', '=', 'internal'), ('origin', 'ilike', 'BOM/')]</field>
        <field name="context">{
            'search_default_not_done': 1,
            'search_default_group_by_state': 1
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un transfert de production
            </p>
            <p>
                Les transferts de production permettent de déplacer les matières premières
                vers l'entrepôt de production.
            </p>
        </field>
    </record>
</odoo>
