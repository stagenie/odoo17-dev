<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Configuration société -->
    <record id="view_company_form_inherit_warehouse_transfer" model="ir.ui.view">
        <field name="name">res.company.form.inherit.warehouse.transfer</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Configuration Entrepôts Production">
                    <group>
                        <group string="Entrepôts par défaut">
                            <field name="raw_material_warehouse_id"
                                   domain="[('warehouse_type', '=', 'raw_material')]"
                                   options="{'no_create': True}"/>
                            <field name="production_warehouse_id"
                                   domain="[('warehouse_type', '=', 'production')]"
                                   options="{'no_create': True}"/>
                            <field name="finished_goods_warehouse_id"
                                   domain="[('warehouse_type', '=', 'finished_goods')]"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Options">
                            <field name="auto_validate_internal_transfers"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
