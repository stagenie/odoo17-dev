<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_wizard_selection_periode_id" model="ir.ui.view">
			<field name="name">view_wizard_selection_periode</field>
			<field name="model">wizard.selection.periode</field>
			<field name="arch" type="xml">
				<form string="Selection de la periode">
					<group>
						<field name="type_caisse_id" class="oe_inline" required="1" options="{'no_create' : True,'no_open' : True}"/>
					</group>
					<div>
						du :<field name="date_from"/> au <field name="date_to"/>
					</div>
					<footer>
                        <button name="imprimer" string="Imprimer" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
				</form>
			</field>
		</record>

	<record id="actions_wizard_selection_periode_id" model="ir.actions.act_window">
		<field name="name">Imprimer le rapport de caisse</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">wizard.selection.periode</field>
		<field name="view_mode">form</field> 
		<field name="view_id" ref="view_wizard_selection_periode_id"/>         
		<field name="target">new</field>
	</record>
				 

 	

	</data>
</odoo>