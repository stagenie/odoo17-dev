<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    	
        <record id="caisse_account_payment_wizard_view_from" model="ir.ui.view">
            <field name="name">caisse.account.payment.wizard</field>
            <field name="model">caisse.account.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Paiement">
                    <group>
                        <group>
                            <field name='payment_type' widget="radio"/>
                            <field name='company_id' invisible="1"/>
                            <field name='partner_id' options="{'no_create': True, 'no_open': True}" required="1"/>
                            <field name='destination_account_id' options="{'no_create': True, 'no_open': True}"
                            force_save="1" readonly="1"/> 
                            <field name='is_internal_transfer' invisible="1"/>
                            <field name='amount' widget="monetary"/>
                        </group>
                    	<group>
                            <field name='journal_id' widget="selection" options="{'no_create': True, 'no_open': True}"
                            domain="[('type', '=', 'cash')]"/>
                            <field name='caisse'/>
                            <field name='date'/>
                            <field name='ref'/>
                        </group>
                    </group>

	                <footer>
	                	<button name='action_confirm' type='object' string='Valider' class="oe_highlight" confirm="Veuillez confirmer SVP"/>
	                	or
	                    <button string="Cancel" class="oe_link" special="cancel" />
	                </footer>
                </form>
            </field>
        </record>


        
        <record id="caisse_account_payment_wizard_action" model="ir.actions.act_window">
            <field name="name">Paiement client</field>
            <field name="res_model">caisse.account.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{'payment_type': 'customer'}</field>
            <field name="target">new</field>
        </record>
        <record id="caisse_account_customer_refund_wizard_action" model="ir.actions.act_window">
            <field name="name">Remboursement client</field>
            <field name="res_model">caisse.account.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{'payment_type': 'customer','refund':True}</field>
            <field name="target">new</field>
        </record>

        <record id="caisse_account_payment_supplier_wizard_action" model="ir.actions.act_window">
            <field name="name">Paiement fournisseur</field>
            <field name="res_model">caisse.account.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{'payment_type': 'supplier'}</field>
            <field name="target">new</field>
        </record>
        <record id="caisse_account_refund_supplier_wizard_action" model="ir.actions.act_window">
            <field name="name">Remboursement fournisseur</field>
            <field name="res_model">caisse.account.payment.wizard</field>
            <field name="view_mode">form</field>
            <field name="context">{'payment_type': 'supplier','refund':True}</field>
            <field name="target">new</field>
        </record>


    </data>
</odoo>
