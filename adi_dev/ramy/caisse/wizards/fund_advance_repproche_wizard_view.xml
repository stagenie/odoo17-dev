<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="fund_advance_repproche_wizard_view" model="ir.ui.view">
            <field name="name">fund_advance_repproche_view</field>
            <field name="model">fund.advance.repproche.wizard</field>
            <field name="arch" type="xml">
                <form string="Report Options"> 
                    <div>
                        <h4>
                            <field name="name" nolabel="1"/>
                        </h4>
                    </div>  
                    <group>
                        <group>
                            <field name="advance_id" invisible="1" />
                            <field name="date" required="1"/>
                            <field name="caisse" domain="[('state', '=', 'open')]" required="1"/>
                        </group>
                    </group>

                    
                    <footer>
                        <button name="action_validate" string="Valider" type="object"  class="oe_highlight"/>
                        or 
                        <button string="Annuler" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="fund_advance_repproche_wizard_action" model="ir.actions.act_window">
            <field name="name">Rapprochement Avance </field>
            <field name="res_model">fund.advance.repproche.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id"/>
            <field name="target">new</field>
            <field name="context"></field>
        </record>

    </data>
</odoo>