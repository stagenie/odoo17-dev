<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_currency_form_inherit" model="ir.ui.view">
        <field name="name">view_currency_form_inherit</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group>
                    <group string="Billets"> 
                        <!-- Blillets -->
                        <field name="cashbox_lines_ids" nolabel="1" context="{'default_currency_id': id}">
                            <tree editable="bottom">
                                <field name="currency_id" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="coin_value" string="Valeur de billet" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Pièces">
                        <!-- Pièces -->                        
                        <field name="cashbox_lines_coin_ids" nolabel="1" context="{'default_currency_id': id}">
                            <tree editable="bottom">
                                <field name="currency_id" invisible="1"/>
                                <field name="sequence" widget="handle"/>
                                <field name="coin_value" string="Valeur de pièce" widget="monetary" ns="{'currency_field': 'currency_id'}"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>        
        </field>
    </record>
</odoo>