<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_company_form_id_fiscal" model="ir.ui.view">
			<field name="name">res.company.form.id.fiscal</field>
			<field name="model">res.company</field>
			<field name="priority">30</field>
			<field name="inherit_id" ref="base.view_company_form"/>
			<field name="arch" type="xml">  
				<field name='name' position='after'>
					<field name='company_social_raison_id' placeholder='SARL par exemple'/>
				</field>
				<field name='phone' position='after'>
					<field name='office'/>
					<field name='fax'/>
				</field>
				<field name="company_registry" position="after">
					<field name='commerce_register_date' placeholder='Date de RC'/>
					<field name='nif' placeholder='max 15 chiffres'/>
					<field name='tin' placeholder='max 18 chiffres'/>
					<field name='num_article' placeholder='max 11 chiffres'/>
					<field name='nis' placeholder='max 15 chiffres'/>
					<field name='capital' placeholder='en Dinars Algerien'/>
					<field name='banc_account_num' placeholder='20 CaractÃ¨res max'/>
					
					
				</field>
				<group name="social_media" position="before" >
					<field name='bank_ids'>
						<tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="bank_id"/>
                                        <field name="acc_number"/>
                                        <field name="acc_holder_name" invisible="1"/>
                         </tree>
					</field>
				</group>

				<field name='city' position="attributes">
					<attribute name='invisible'>1</attribute>
				</field>
				<field name='state_id' position="replace">
					<field name="state_id" class="oe_no_button" placeholder="Ville" on_change="onchange_state(state_id)" style="width: 60%" options="{'no_open': True}"/>
				</field>
				<field name='zip' position="replace">
					<field name="zip" placeholder="Code postal" style="width: 40%"/>
				</field>
				
			</field>
		</record>
	</data>
</odoo>