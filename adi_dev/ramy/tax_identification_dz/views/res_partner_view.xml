<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_partner_form_id_fiscal" model="ir.ui.view">
		<field name="name">res.partner.form.id.fiscal</field>
		<field name="model">res.partner</field>
		<field name="priority">30</field>
		<field name="inherit_id" ref="base.view_partner_form"/>
		<field name="arch" type="xml"> 
			<field name="company_type" position="after">
	            <div class="oe_inline" invisible="supplier == False">
	            	<field name="stranger_supplier" class="oe_inline"/>
	            	<label for="stranger_supplier" string="Fournisseur étranger ?"/>
	            </div>
			</field>

			<field name='name' position='after'>
				<div>
				 	<field name='company_social_raison_id' placeholder='SARL par exemple' invisible="is_company == False"/>
				 </div>
			</field>
			<field name="website" position="before">
				<field name="fax"/>
				<field name='cni' placeholder='max 18 chiffres' invisible="is_company != False"/>
				<field name='nif' placeholder='max 15 chiffres'/>
				<field name='tin' placeholder='max 18 chiffres'/>
				<field name='num_article' placeholder='max 11 chiffres' />
				<field name='nis' placeholder='max 15 chiffres'/>
				<field name='ai'/>
				<field name='capital' placeholder='En dinars algerian'/>
				<field name='commerce_register' placeholder='RC' required='0'/>
				<field name='commerce_register_date' placeholder='Date de RC'/>
			</field>

			<field name="ref" position="attributes">
				<attribute name="string">Référence</attribute>
			</field> 
            <xpath expr="//group[@name='sale']" position="inside">
                <field name="customer"/>
            </xpath>          
            <xpath expr="//group[@name='purchase']" position="inside">
                <field name="supplier"/>
            </xpath>
                
		</field>
	</record> 

    <record id="account.res_partner_action_customer" model="ir.actions.act_window">
        <field name="context">{'search_default_customer': 1,
            'res_partner_search_mode': 'customer', 
            'default_is_company': True, 
            'default_customer': True, 
            'default_customer_rank': 1}
        </field>
        <!--field name="domaine">[('customer','=',True)]</field-->
    </record>

    <record id="account.res_partner_action_supplier" model="ir.actions.act_window">
        <field name="context">{'search_default_supplier': 1,
            'res_partner_search_mode': 'supplier', 
            'default_is_company': True,
            'default_supplier': True, 
            'default_supplier_rank': 1}
        </field>
        <!--field name="domaine">[('supplier','=',True)]</field-->
    </record>

	</data>
</odoo>