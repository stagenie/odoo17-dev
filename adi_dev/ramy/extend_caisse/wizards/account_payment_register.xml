<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_payment_register_form_inherit_extend_caisse" model="ir.ui.view">
        <field name="name">account.payment.register.view.form.inherit.caisse_extend</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">                     
                <field name="bank_type" invisible="1"/>
                <field name="num_piece_cheq_tpe" invisible="not bank_type"/>
                <field name="bank_id" invisible="not bank_type"/>
            </xpath>
        </field>
    </record>

</odoo>
