<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire période -->
    <record id="view_payroll_period_form" model="ir.ui.view">
        <field name="name">payroll.period.form</field>
        <field name="model">payroll.period</field>
        <field name="arch" type="xml">
            <form string="Période de paie">
                <header>
                    <button name="action_open"
                            string="Ouvrir"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_close"
                            string="Fermer"
                            type="object"
                            invisible="state != 'open'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="period_type" widget="radio"/>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="check_chev"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lots de paie">
                            <field name="batch_ids" readonly="1">
                                <tree>
                                    <field name="name"/>
                                    <field name="slip_count"/>
                                    <field name="total_net" widget="monetary" sum="Total"/>
                                    <field name="state" widget="badge"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue arbre période améliorée -->
    <record id="view_payroll_period_tree" model="ir.ui.view">
        <field name="name">payroll.period.tree</field>
        <field name="model">payroll.period</field>
        <field name="arch" type="xml">
            <tree string="Périodes de paie"
                  decoration-info="state == 'draft'"
                  decoration-success="state == 'open'"
                  decoration-muted="state == 'closed'">
                <field name="name"/>
                <field name="period_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'open'"
                       decoration-muted="state == 'closed'"/>
            </tree>
        </field>
    </record>

    <!-- Action période -->
    <record id="action_payroll_period" model="ir.actions.act_window">
        <field name="name">Périodes de paie</field>
        <field name="res_model">payroll.period</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
