<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire lot am√©lior√©e -->
    <record id="view_payroll_batch_form" model="ir.ui.view">
        <field name="name">payroll.batch.form</field>
        <field name="model">payroll.batch</field>
        <field name="arch" type="xml">
            <form string="Lot de paie">
                <header>
                    <button name="action_generate_slips"
                            string="G√©n√©rer les bulletins"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_compute_sheet"
                            string="Calculer tout"
                            type="object"
                            invisible="state != 'generate'"/>
                    <button name="action_confirm"
                            string="Confirmer"
                            type="object"
                            invisible="state != 'generate'"/>
                    <button name="action_done"
                            string="Valider et comptabiliser"
                            type="object"
                            class="btn-success"
                            invisible="state != 'confirm'"
                            confirm="Valider tous les bulletins et cr√©er la facture group√©e ?"/>
                    <button name="action_print_batch_report"
                            string="üìÑ Imprimer l'√©tat"
                            type="object"
                            invisible="state not in ('confirm','done','paid')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generate,confirm,done"/>
                </header>
                <sheet>
                    <field name="invoice_id" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_slips"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-text-o">
                            <field name="slip_count" widget="statinfo" string="Bulletins"/>
                        </button>

                        <!-- Smart button pour la facture -->
                        <button name="action_view_invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-file-invoice"
                                invisible="not invoice_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Facture</span>
                                <field name="invoice_state" widget="badge"
                                       decoration-success="invoice_state == 'posted'"
                                       decoration-warning="invoice_state == 'draft'"/>
                            </div>
                        </button>

                        <!-- Smart button pour le paiement -->
                        <button name="action_view_invoice"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-money"
                                invisible="not invoice_id">
                            <div class="o_stat_info">
                                <field name="invoice_payment_state"
                                       widget="badge"
                                       decoration-success="invoice_payment_state in ('paid', 'in_payment')"
                                       decoration-warning="invoice_payment_state == 'partial'"
                                       decoration-danger="invoice_payment_state == 'not_paid'"/>
                                <span class="o_stat_text">Paiement</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <group>
                        <group>
                            <field name="period_id" options="{'no_create': True}"/>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Onglet S√©lection des employ√©s -->
                        <page string="S√©lection des employ√©s" name="employee_selection">
                            <div class="alert alert-info" role="alert">
                                <i class="fa fa-info-circle"/>
                                S√©lectionnez des d√©partements pour ajouter automatiquement leurs employ√©s avec contrat actif.
                            </div>
                            <group>
                                <field name="selection_type" invisible="1"/>
                                <field name="department_ids"
                                       widget="many2many_tags"
                                       invisible="selection_type != 'department'"
                                       required="selection_type == 'department'"
                                       placeholder="S√©lectionner des d√©partements..."/>
                                <field name="employee_ids"
                                       widget="many2many_tags"
                                       domain="[('contract_ids.state', '=', 'open')]"
                                       placeholder="Ou s√©lectionner des employ√©s sp√©cifiques..."/>
                            </group>
                        </page>

                        <!-- Onglet Bulletins -->
                        <page string="Bulletins" name="slips" invisible="state == 'draft'">
                            <group string="Totaux" col="4">
                                <field name="total_gross" widget="monetary"/>
                                <field name="total_net" widget="monetary"/>
                                <field name="slip_count" string="Nombre de bulletins"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                            <separator string="D√©tail des bulletins"/>
                            <field name="slip_ids" readonly="1">
                                <tree decoration-success="state == 'done'"
                                      decoration-info="state == 'compute'"
                                      decoration-warning="state == 'confirm'">
                                    <field name="number"/>
                                    <field name="employee_name"/>
                                    <field name="contract_id"/>
                                    <field name="worked_days"/>
                                    <field name="total_earnings" widget="monetary" optional="show"/>
                                    <field name="total_deductions" widget="monetary" optional="show"/>
                                    <field name="total_net" widget="monetary" sum="Total"/>
                                    <field name="state" widget="badge"
                                           decoration-success="state == 'done'"
                                           decoration-info="state == 'compute'"
                                           decoration-warning="state == 'confirm'"/>
                                </tree>
                            </field>
                        </page>

                        <!-- Onglet Notes -->
                        <page string="Notes" name="notes">
                            <field name="notes" nolabel="1" placeholder="Ajouter des notes internes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue arbre lot am√©lior√©e -->
    <record id="view_payroll_batch_tree" model="ir.ui.view">
        <field name="name">payroll.batch.tree</field>
        <field name="model">payroll.batch</field>
        <field name="arch" type="xml">
            <tree string="Lots de paie"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'generate'"
                  decoration-success="state in ('done', 'paid')">
                <field name="name"/>
                <field name="period_id"/>
                <field name="slip_count"/>
                <field name="total_net" widget="monetary" sum="Total"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'generate'"
                       decoration-success="state in ('done', 'paid')"/>
                <field name="invoice_payment_state" widget="badge" optional="show"
                       decoration-success="invoice_payment_state in ('paid', 'in_payment')"
                       decoration-warning="invoice_payment_state == 'partial'"
                       decoration-danger="invoice_payment_state == 'not_paid'"/>
                <button name="action_print_batch_report"
                        string="Imprimer"
                        type="object"
                        icon="fa-print"
                        invisible="state == 'draft'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Kanban pour les lots -->
    <record id="view_payroll_batch_kanban" model="ir.ui.view">
        <field name="name">payroll.batch.kanban</field>
        <field name="model">payroll.batch</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="period_id"/>
                <field name="slip_count"/>
                <field name="total_net"/>
                <field name="state"/>
                <field name="invoice_payment_state"/>
                <progressbar field="state"
                            colors='{"draft": "secondary", "generate": "warning", "confirm": "info", "done": "success"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <span class="o_kanban_record_subtitle">
                                        <field name="period_id"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div>
                                        <i class="fa fa-users"/> <field name="slip_count"/> bulletins
                                    </div>
                                    <div class="text-primary">
                                        <strong><field name="total_net" widget="monetary"/></strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="badge"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right" t-if="record.invoice_payment_state.raw_value">
                                        <field name="invoice_payment_state" widget="badge"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action lot avec vue kanban -->
    <record id="action_payroll_batch" model="ir.actions.act_window">
        <field name="name">Lots de paie</field>
        <field name="res_model">payroll.batch</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Cr√©er un nouveau lot de paie
            </p>
            <p>
                Un lot permet de g√©n√©rer et g√©rer plusieurs bulletins en m√™me temps
            </p>
        </field>
    </record>
</odoo>
