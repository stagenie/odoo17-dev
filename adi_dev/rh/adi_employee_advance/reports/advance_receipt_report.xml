<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rapport Reçu d'avance - Format Odoo 17 avec record -->
    <record id="action_report_advance_receipt" model="ir.actions.report">
        <field name="name">Reçu d'avance</field>
        <field name="model">employee.advance</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_employee_advance.report_advance_receipt</field>
        <field name="report_file">adi_employee_advance.report_advance_receipt</field>
        <field name="print_report_name">'Reçu avance - %s' % object.name</field>
        <field name="binding_model_id" ref="model_employee_advance"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_advance_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="text-center mb-4">
                            <h2>REÇU D'AVANCE SUR SALAIRE</h2>
                            <h3>N°
                                <span t-field="doc.name"/>
                            </h3>
                        </div>

                        <div class="row mt-5">
                            <div class="col-12">
                                <table class="table table-borderless">
                                    <tr>
                                        <td width="30%">
                                            <strong>Employé :</strong>
                                        </td>
                                        <td>
                                            <span t-field="doc.employee_name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Fonction :</strong>
                                        </td>
                                        <td>
                                            <span t-field="doc.job_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Département :</strong>
                                        </td>
                                        <td>
                                            <span t-field="doc.department_id.name"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>Date de l'avance :</strong>
                                        </td>
                                        <td>
                                            <span t-field="doc.date"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <table class="table table-bordered">
                                    <tr class="table-active">
                                        <td width="50%">
                                            <strong>Montant de l'avance :</strong>
                                        </td>
                                        <td class="text-right">
                                            <h4>
                                                <span t-field="doc.amount" widget="monetary"/>
                                            </h4>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div class="row mt-3" t-if="doc.observation">
                            <div class="col-12">
                                <p>
                                    <strong>Observations :</strong>
                                </p>
                                <p class="pl-4">
                                    <span t-field="doc.observation"/>
                                </p>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-12">
                                <p>
                                    Je soussigné(e)
                                    <strong>
                                        <span t-field="doc.employee_name"/>
                                    </strong>
                                    ,
                                    reconnais avoir reçu la somme de
                                    <strong>
                                        <span t-field="doc.amount" widget="monetary"/>
                                    </strong>
                                    à titre d'avance sur salaire, remboursable sur ma prochaine paie.
                                </p>
                            </div>
                        </div>

                        <div class="row mt-5">
                            <div class="col-6">
                                <p>
                                    <strong>Signature de l'employé :</strong>
                                </p>
                                <div style="height: 80px; border-bottom: 1px solid black; width: 250px;"></div>
                                <p class="mt-2">Date : ____________________</p>
                            </div>
                            <div class="col-6">
                                <p>
                                    <strong>Signature autorisée :</strong>
                                </p>
                                <div style="height: 80px; border-bottom: 1px solid black; width: 250px;"></div>
                                <p class="mt-2">Date : ____________________</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
