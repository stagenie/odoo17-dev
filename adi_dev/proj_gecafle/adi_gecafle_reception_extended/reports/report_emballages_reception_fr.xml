<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template pour le bon d'emballages en français -->
    <template id="report_emballages_reception_fr">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- En-tête -->
                        <h3 class="text-center mb-3">BON EMBALLAGE</h3>

                        <!-- Informations générales -->
                        <div class="row mb-3">
                            <div class="col-6">
                                <p><strong>Réception N°:</strong> <span t-field="o.name"/></p>
                                <p><strong>Date:</strong>
                                   <span t-field="o.reception_date"
                                         t-options='{"widget": "datetime", "format": "dd/MM/yyyy HH:mm"}'/></p>
                            </div>
                            <div class="col-6">
                                <p><strong>Producteur:</strong> <span t-field="o.producteur_id.name"/></p>
                                <p><strong>Téléphone:</strong> <span t-field="o.phone_producteur"/></p>
                            </div>
                        </div>

                        <!-- Tableau des emballages achetés uniquement -->
                        <table class="table table-sm table-bordered">
                            <thead class="bg-light">
                                <tr>
                                    <th width="5%" class="text-center">N°</th>
                                    <th width="40%">Type d'Emballage</th>
                                    <th width="15%" class="text-center">Quantité</th>
                                    <th width="20%" class="text-right">Prix Unitaire</th>
                                    <th width="20%" class="text-right">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="counter" t-value="1"/>
                                <t t-set="total_montant" t-value="0.0"/>
                                <!-- Parcourir uniquement les emballages achetés -->
                                <t t-foreach="o.details_emballage_reception_ids.filtered('is_achete')" t-as="line">
                                    <t t-set="prix_unitaire" t-value="line.prix_unitaire_achat or line.emballage_id.price_unit or 0.0"/>
                                    <t t-set="montant_ligne" t-value="(line.qte_achetee or 0) * prix_unitaire"/>

                                    <tr>
                                        <td class="text-center"><t t-esc="counter"/></td>
                                        <td><span t-field="line.emballage_id.name"/></td>
                                        <td class="text-center">
                                            <t t-esc="int(line.qte_achetee or 0)"/>
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="'%.2f' % prix_unitaire"/> DA
                                        </td>
                                        <td class="text-right">
                                            <t t-esc="'%.2f' % montant_ligne"/> DA
                                        </td>
                                    </tr>
                                    <t t-set="counter" t-value="counter + 1"/>
                                    <t t-set="total_montant" t-value="total_montant + montant_ligne"/>
                                </t>
                            </tbody>
                            <tfoot class="bg-light font-weight-bold">
                                <tr>
                                    <td colspan="4" class="text-right">MONTANT TOTAL:</td>
                                    <td class="text-right">
                                        <t t-esc="'%.2f' % (total_montant or 0.0)"/> DA
                                    </td>
                                </tr>
                            </tfoot>
                        </table>

                        <!-- Section signatures avec espace réduit -->
                        <div class="row" style="margin-top: 40px;">
                            <div class="col-6">
                                <div class="text-center" style="padding-top: 40px;">
                                    <hr style="width: 80%;"/>
                                    <p><strong>Le Producteur</strong></p>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center" style="padding-top: 40px;">
                                    <hr style="width: 80%;"/>
                                    <p><strong>Le Responsable</strong></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Action pour le rapport FR (inchangée) -->
    <record id="action_report_emballages_reception_fr" model="ir.actions.report">
        <field name="name">Bon Emballage (FR)</field>
        <field name="model">gecafle.reception</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_gecafle_reception_extended.report_emballages_reception_fr</field>
        <field name="report_file">adi_gecafle_reception_extended.report_emballages_reception_fr</field>
        <field name="print_report_name">'Bon Emballage FR - %s' % (object.name)</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>
</odoo>
