<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire du wizard SIMPLIFIÉE -->
    <record id="view_bordereau_print_wizard_form" model="ir.ui.view">
        <field name="name">gecafle.bordereau.print.wizard.form</field>
        <field name="model">gecafle.bordereau.print.wizard</field>
        <field name="arch" type="xml">
            <form string="Options d'impression du Bordereau">
                <sheet>
                    <field name="recap_id" invisible="1"/>

                    <group col="2">
                        <group string="Options de formatage">
                            <field name="group_by_product" widget="boolean_toggle"/>
                        </group>

                        <group string="Langue du rapport">
                            <field name="report_language" widget="radio" nolabel="1"/>
                        </group>
                    </group>

                    <div class="alert alert-info">
                        <i class="fa fa-info-circle"/> Les commissions seront toujours affichées.
                        Le tri sera automatiquement par prix unitaire décroissant.
                    </div>
                </sheet>

                <footer>
                    <button string="Imprimer"
                            name="action_print_bordereau"
                            type="object"
                            class="btn-primary"
                            icon="fa-print"/>
                    <button string="Annuler"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le wizard -->
    <record id="action_bordereau_print_wizard" model="ir.actions.act_window">
        <field name="name">Options d'impression</field>
        <field name="res_model">gecafle.bordereau.print.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_recap_id': active_id}</field>
    </record>
</odoo>
