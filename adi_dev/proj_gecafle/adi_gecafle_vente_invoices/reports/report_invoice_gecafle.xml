<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template du rapport de facture GECAFLE -->
    <template id="report_invoice_gecafle_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.move_type in ('out_invoice', 'out_refund') and o.gecafle_vente_id">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>
                                <span t-if="o.move_type == 'out_invoice'">Facture</span>
                                <span t-elif="o.move_type == 'out_refund'">Avoir</span>
                                <span t-field="o.name"/>
                            </h2>

                            <div class="row mt-4 mb-4">
                                <div class="col-6">
                                    <strong>Client:</strong>
                                    <address t-field="o.partner_id"
                                        t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                                </div>
                                <div class="col-6 text-right">
                                    <strong>Date:</strong> <span t-field="o.invoice_date"/><br/>
                                    <strong>Bon de vente:</strong> <span t-field="o.gecafle_vente_id.name"/><br/>
                                    <strong>Date vente:</strong> <span t-field="o.gecafle_vente_id.date_vente" t-options='{"widget": "date"}'/><br/>
                                </div>
                            </div>

                            <!-- Tableau des lignes -->
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Colis</th>
                                        <th>Poids Net</th>
                                        <th>Prix/kg</th>
                                        <th>Montant</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.gecafle_line_type == 'produit')" t-as="line">
                                        <tr>
                                            <td><span t-field="line.name"/></td>
                                            <td><span t-field="line.nombre_colis"/></td>
                                            <td><span t-field="line.poids_net"/></td>
                                            <td><span t-field="line.prix_unitaire"/></td>
                                            <td><span t-field="line.price_subtotal"/></td>
                                        </tr>
                                    </t>
                                    <!-- Lignes emballages et remises -->
                                    <t t-foreach="o.invoice_line_ids.filtered(lambda l: l.gecafle_line_type != 'produit')" t-as="line">
                                        <tr>
                                            <td colspan="4"><span t-field="line.name"/></td>
                                            <td><span t-field="line.price_subtotal"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>

                            <!-- Totaux -->
                            <div class="clearfix">
                                <div class="row">
                                    <div class="col-6">
                                        <table class="table table-sm">
                                            <tr>
                                                <td><strong>Total Poids Net:</strong></td>
                                                <td><span t-field="o.total_poids_net"/> kg</td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <table class="table table-sm">
                                            <tr>
                                                <td class="text-right"><strong>Total:</strong></td>
                                                <td class="text-right"><span t-field="o.amount_total"/></td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
                <t t-else="">
                    <!-- Utiliser le template standard pour les autres factures -->
                    <t t-call="account.report_invoice_document"/>
                </t>
            </t>
        </t>
    </template>

    <!-- DÃ©finition du rapport -->
    <record id="action_report_invoice_gecafle" model="ir.actions.report">
        <field name="name">Facture GECAFLE</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_gecafle_vente_invoices.report_invoice_gecafle_document</field>
        <field name="report_file">adi_gecafle_vente_invoices.report_invoice_gecafle</field>
        <field name="print_report_name">'Facture GECAFLE - %s' % (object.name or '')</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
