<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire du bon d'achat -->
    <record id="view_gecafle_bon_achat_form" model="ir.ui.view">
        <field name="name">gecafle.bon.achat.form</field>
        <field name="model">gecafle.bon.achat</field>
        <field name="arch" type="xml">
            <form>
                <header>
                  <button name="action_validate" string="Valider"
                          type="object"
                          class="btn-primary"
                          invisible="state != 'brouillon'"/>

                    <button name="action_mark_paid"
                            string="Marquer comme payé"
                            type="object"
                            class="btn-success"
                            invisible="state != 'valide'"/>
                    <button name="action_cancel" string="Annuler" type="object"
                            class="btn-danger"
                            invisible="state != 'brouillon' or state != 'valide'"/>
                    <button name="action_draft"
                            string="Remettre en brouillon"
                            type="object"
                            invisible="state != 'valide' or state != 'cancel'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="producteur_id" options="{'no_create': True}"/>
                            <field name="reception_id" options="{'no_create': True}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="recap_id" options="{'no_create': True}"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Détails">
                            <field name="line_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="quantite"/>
                                    <field name="prix_unitaire"/>
                                    <field name="montant" sum="Total"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group>
                            <field name="note" placeholder="Ajouter une description supplémentaire ici..."/>
                        </group>
                        <group class="oe_subtotal_footer">
                            <field name="montant_total" widget="monetary" class="oe_subtotal_footer_separator"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue liste des bons d'achat - MODIFIÉ: list → tree -->
    <record id="view_gecafle_bon_achat_tree" model="ir.ui.view">
        <field name="name">gecafle.bon.achat.tree</field>
        <field name="model">gecafle.bon.achat</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'brouillon'"
                  decoration-success="state == 'valide'" decoration-muted="state == 'annule'" decoration-bf="state == 'paye'">
                <field name="name"/>
                <field name="date"/>
                <field name="producteur_id"/>
                <field name="reception_id"/>
                <field name="montant_total" sum="Total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Vue recherche des bons d'achat -->
    <record id="view_gecafle_bon_achat_search" model="ir.ui.view">
        <field name="name">gecafle.bon.achat.search</field>
        <field name="model">gecafle.bon.achat</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="producteur_id"/>
                <field name="reception_id"/>
                <filter string="Brouillon" name="draft" domain="[('state','=','brouillon')]"/>
                <filter string="Validé" name="validated" domain="[('state','=','valide')]"/>
                <filter string="Payé" name="paid" domain="[('state','=','paye')]"/>
                <filter string="Annulé" name="cancelled" domain="[('state','=','annule')]"/>
                <group expand="0" string="Group By">
                    <filter string="Producteur" name="group_by_producteur_id" context="{'group_by':'producteur_id'}"/>
                    <filter string="État" name="group_by_state" context="{'group_by':'state'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by':'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les bons d'achat -->
    <record id="action_gecafle_bon_achat" model="ir.actions.act_window">
        <field name="name">Bons d'Achat</field>
        <field name="res_model">gecafle.bon.achat</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créez votre premier bon d'achat
            </p>
        </field>
    </record>
</odoo>
