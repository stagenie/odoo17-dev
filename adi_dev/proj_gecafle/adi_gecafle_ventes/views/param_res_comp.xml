<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<record id="view_company_form_inherit_gecafle" model="ir.ui.view">
    <field name="name">res.company.form.gecafle</field>
    <field name="model">res.company</field>
    <field name="inherit_id" ref="base.view_company_form"/>
    <field name="arch" type="xml">
        <xpath expr="//notebook" position="inside">
            <page string="Paramètres Remise" name="gecafle_settings">
                <group>
                    <group string="Paramètres Remise sur lese vente">
                        <field name="remise_max_autorisee"/>
                        <field name="autoriser_modification_prix"/>
                    </group>
                     <group string="Paramètres Emballages">
                        <field name="fideles_paient_emballages_non_rendus"/>
                    </group>
                </group>
            </page>
        </xpath>
    </field>
</record>
</odoo>