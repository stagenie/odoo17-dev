<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_gecafle_client_list" model="ir.ui.view">
        <field name="name">gecafle.client.list</field>
        <field name="model">gecafle.client</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="tel_mob"/>
                <field name="est_fidel" widget="boolean"/>
                <field name="date_creation" string="Date de CrÃ©ation"/>
            </tree>
        </field>
    </record>

    <record id="view_gecafle_client_search" model="ir.ui.view">
        <field name="name">gecafle.client.search</field>
        <field name="model">gecafle.client</field>
        <field name="arch" type="xml">
            <search string="Recherche Clients">
                <field name="name"/>
                <field name="region_id"/>
                <field name="est_fidel"/>
            </search>
        </field>
    </record>

    <record id="view_gecafle_client_form" model="ir.ui.view">
        <field name="name">gecafle.client.form</field>
        <field name="model">gecafle.client</field>
        <field name="arch" type="xml">
            <form string="Client">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="tel_mob"/>
                    </group>
                    <group>
                        <field name="adresse"/>
                    </group>
                    <group>
                        <field name="est_fidel"/>
                        <field name="date_creation" readonly="1"/>
                    </group>
                    <group>
<!--                        <field name="solde_initiale"/>-->
                        <field name="region_id"/>
                    </group>
                    <group>
                        <field name="langue_client"/>
                    </group>
                    <group>
                        <field name="observation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
