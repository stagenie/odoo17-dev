<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template principal pour le bon de vente NORMAL -->
    <template id="report_bon_vente">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="adi_gecafle_ventes.report_bon_vente_document"/>
            </t>
        </t>
    </template>

    <!-- Template pour le DUPLICATA -->
    <template id="report_bon_vente_duplicata">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="adi_gecafle_ventes.report_bon_vente_duplicata_document"/>
            </t>
        </t>
    </template>

    <!-- Template du document bon de vente NORMAL -->
    <template id="report_bon_vente_document">
        <t t-set="company" t-value="doc.company_id or env.company"/>
        <t t-call="web.external_layout">
            <t t-set="o" t-value="doc"/>

            <!-- États du document -->
            <div t-if="o.state == 'annule'" class="alert alert-danger text-center mb-3">
                <strong style="font-size: 18px;">VENTE ANNULÉE</strong>
            </div>

            <div t-if="o.state == 'brouillon'" class="alert alert-warning text-center mb-3">
                <strong style="font-size: 18px;">BROUILLON</strong>
            </div>

            <div class="page">
                <div class="row mb-4">
                    <!-- Section principale (gauche) -->
                    <div t-att-class="'col-7' if (not o.client_id.est_fidel and o.montant_total_consigne > 0) else 'col-12'">
                        <!-- Titre et infos sur une ligne -->
                        <div class="text-center mb-4">
                            <h4 style="margin: 0;">
                                <strong style="font-size: 20px;">BON DE VENTE</strong>
                                <span style="font-size: 16px; margin-left: 15px;">N° :
                                    <span t-field="o.name"/>
                                </span>
                                <span style="margin-left: 30px;">
                                    <strong style="font-size: 18px;">Du</strong>
                                    :
                                    <span style="font-size: 14px;" t-field="o.date_vente"
                                          t-options='{"widget": "datetime", "format": "dd/MM/yyyy HH:mm"}'/>
                                </span>
                            </h4>
                        </div>

                        <!-- Client centré et agrandi, SANS téléphone -->
                        <div class="text-center mb-3"
                             style="background-color: #f8f9fa; padding: 15px; border-radius: 5px;">
                            <h3 style="margin: 0;">
                                <strong>Client :</strong>
                                <span t-field="o.client_id.name" style="font-size: 26px;"/>
                            </h3>
                        </div>
                    </div>

                    <!-- Section Consigne AVEC NOM DU CLIENT -->
                    <!-- Section Consigne OPTIMISÉE -->
                    <div t-if="not o.client_id.est_fidel and o.montant_total_consigne > 0" class="col-5">
                        <div style="border: 2px dashed #aaa; padding: 15px; min-height: 200px;
                background: repeating-linear-gradient(45deg, #fff, #fff 10px, #f9f9f9 10px, #f9f9f9 20px);
                position: relative;">
                            <!-- Indicateur de découpe -->
                            <div style="position: absolute; left: -12px; top: 50%; font-size: 24px; color: #999;">✂
                            </div>

                            <!-- Contenu optimisé de la consigne -->
                            <div style="padding-top: 10px;">
                                <!-- NOM DU CLIENT avec N° sur la même ligne -->
                                <div class="text-center mb-3">
                                    <strong style="font-size: 20px; color: #333;">
                                        <span t-field="o.client_id.name"/>
                                        <span style="font-size: 18px; font-weight: bold;">/ N°
                                            <span t-field="o.name"/>
                                        </span>
                                    </strong>
                                </div>

                                <hr style="border-top: 1px dashed #999; margin: 10px 0;"/>

                                <!-- Emballages sur une ligne -->
                                <div class="mb-3">
                                    <strong>Emb. :</strong>
                                    <span t-field="o.emballages_consigne_desc"
                                          style="font-size: 16px; font-weight: 500;"/>
                                </div>

                                <!-- Montant -->
                                <div class="text-center mt-4">
                                    <strong style="font-size: 24px;">
                                        <span t-field="o.montant_total_consigne"/>
                                    </strong>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Tableau des produits -->
                <table class="table table-sm table-bordered">
                    <thead>
                        <tr>
                            <th>N°BR</th>
                            <th>Producteur</th>
                            <th>Nbre colis</th>
                            <th>Désignation</th>
                            <th>Poids/U</th>
                            <th>Type Colis</th>
                            <th>Q.</th>
                            <th>Poids Brut</th>
                            <th>Poids Colis</th>
                            <th>Poids Net</th>
                            <th>Prix /U</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.detail_vente_ids" t-as="line">
                            <tr>
                                <td>
                                    <span t-field="line.reception_id.name"/>
                                </td>
                                <td>
                                    <span t-field="line.producteur_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="line.nombre_colis"/>
                                </td>
                                <td>
                                    <span t-field="line.produit_id.name"/>
                                </td>
                                <td>
                                    <span t-esc="'%.2f' % line.poids_brut_un_colis"/>
                                </td>
                                <td>
                                    <span t-field="line.type_colis_id.name"/>
                                </td>
                                <td>
                                    <span t-field="line.qualite_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'%.2f' % line.poids_brut"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'%.2f' % line.poids_colis"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'%.2f' % line.poids_net"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.format_number(line.prix_unitaire)"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="o.format_number(line.montant_net)"/>
                                    DA
                                </td>
                            </tr>
                        </t>
                    </tbody>
                    <tfoot>
                        <tr class="font-weight-bold">
                            <td colspan="2">
                                <strong>TOTAUX</strong>
                            </td>
                            <td class="text-center">
                                <span t-esc="sum(o.detail_vente_ids.mapped('nombre_colis'))"/>
                            </td>
                            <td colspan="4"></td>
                            <td class="text-right">
                                <span t-esc="'%.2f' % sum(o.detail_vente_ids.mapped('poids_brut'))"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="'%.2f' % sum(o.detail_vente_ids.mapped('poids_colis'))"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="'%.2f' % sum(o.detail_vente_ids.mapped('poids_net'))"/>
                            </td>
                            <td></td>
                            <td class="text-right">
                                <span t-field="o.montant_total_net"
                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </tfoot>
                </table>

                <!-- Section du bas -->
                <div class="row mt-5">
                    <!-- Notes et observations -->
                    <div class="col-6">
                        <!-- VENDEUR EN BAS -->
                        <div style="border-top: 1px solid #dee2e6; padding-top: 10px; margin-bottom: 15px;">
                            <strong>Vendeur :</strong>
                            <span t-field="o.user_id.name"/>
                        </div>

                        <div t-if="o.notes">
                            <h5>Conditions Générales</h5>
                            <p t-field="o.notes"/>
                        </div>
                        <div t-if="o.observation" class="mt-3">
                            <h5>Observations</h5>
                            <p t-field="o.observation"/>
                        </div>
                    </div>

                    <!-- Récapitulatif des totaux -->
                    <div class="col-6">
                        <table class="table table-sm">
                            <tr>
                                <td class="text-right">
                                    <strong>Montant Colis:</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.montant_total_emballages"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right">
                                    <strong>Montant Net:</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.montant_total_net"/>
                                </td>
                            </tr>
                            <tr t-if="o.montant_remise_globale > 0">
                                <td class="text-right">
                                    <strong>Remise:</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="o.montant_remise_globale"/>
                                </td>
                            </tr>
                            <tr class="border-top">
                                <td class="text-right">
                                    <strong>Montant Total:</strong>
                                </td>
                                <td class="text-right">
                                    <strong>
                                        <span t-field="o.montant_total_a_payer"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </t>
    </template>

