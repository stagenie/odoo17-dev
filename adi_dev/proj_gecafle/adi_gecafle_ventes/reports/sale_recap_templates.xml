<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template pour les détails des ventes sans marge -->
    <template id="report_reception_sale_details">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-set="company" t-value="doc.company_id"/>

                    <!-- Tri des lignes par date de vente et client -->
                    <t t-set="sorted_sales" t-value="doc.sale_line_ids.sorted(lambda l: (l.date_vente or '', l.client_id.name or ''))"/>

                    <div class="page">
                        <!-- Titre et en-tête -->
                        <h2 class="text-center mb-4">DÉTAILS DES VENTES PAR RÉCEPTION</h2>

                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Producteur:</strong> <span t-field="doc.producteur_id.name"/>
                                <br/>
                                <strong>Réception:</strong> <span t-field="doc.reception_id.name"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Date:</strong> <span t-field="doc.date_creation"/>
                                <br/>
                                <strong>Référence:</strong> <span t-field="doc.name"/>
                            </div>
                        </div>

                        <!-- Tableau des détails de ventes -->
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Vente</th>
                                    <th>Client</th>
                                    <th>Produit</th>
                                    <th>Qualité</th>
                                    <th>Type Colis</th>
                                    <th>Nombre</th>
                                    <th>Poids Net</th>
                                    <th class="text-right">Prix/kg</th>
                                    <th class="text-right">Montant</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="sorted_sales" t-as="line">
                                    <td><span t-field="line.date_vente" t-options="{'widget': 'date'}"/></td>
                                    <td><span t-field="line.vente_id.name"/></td>
                                    <td><span t-field="line.client_id.name"/></td>
                                    <td><span t-field="line.produit_id.name"/></td>
                                    <td><span t-field="line.qualite_id.name"/></td>
                                    <td><span t-field="line.type_colis_id.name"/></td>
                                    <td class="text-right"><span t-field="line.nombre_colis"/></td>
                                    <td class="text-right"><span t-field="line.poids_net"/></td>
                                    <td class="text-right"><span t-field="line.prix_unitaire"/></td>
                                    <td class="text-right"><span t-field="line.montant_net"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Sommaire -->
                        <div class="row">
                            <div class="col-7">
                                <!-- Informations statistiques -->
                                <p>
                                    <strong>Total des ventes:</strong> <span t-esc="len(set(line.vente_id.id for line in doc.sale_line_ids))"/>
                                    <br/>
                                    <strong>Total des clients:</strong> <span t-esc="len(set(line.client_id.id for line in doc.sale_line_ids))"/>
                                </p>
                            </div>
                            <div class="col-5">
                                <table class="table table-sm">
                                    <tr>
                                        <td class="text-right"><strong>Total Ventes:</strong></td>
                                        <td class="text-right"><span t-field="doc.total_ventes"/></td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><strong>Total Commission:</strong></td>
                                        <td class="text-right"><span t-field="doc.total_commission"/></td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="text-right"><strong>Net à Payer:</strong></td>
                                        <td class="text-right"><strong><span t-field="doc.net_a_payer"/></strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Template pour les détails des ventes avec marge -->
    <template id="report_reception_sale_details_with_commission">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-set="company" t-value="doc.company_id"/>

                    <!-- Tri des lignes par date de vente et client -->
                    <t t-set="sorted_sales" t-value="doc.sale_line_ids.sorted(lambda l: (l.date_vente or '', l.client_id.name or ''))"/>

                    <!-- Marges du producteur -->
                    <t t-set="fruit_margin" t-value="doc.producteur_id.fruit_margin"/>
                    <t t-set="vegetable_margin" t-value="doc.producteur_id.vegetable_margin"/>

                    <div class="page">
                        <!-- Titre et en-tête -->
                        <h2 class="text-center mb-4">DÉTAILS DES VENTES PAR RÉCEPTION (AVEC MARGES)</h2>

                        <div class="row mb-4">
                            <div class="col-6">
                                <strong>Producteur:</strong> <span t-field="doc.producteur_id.name"/>
                                <br/>
                                <strong>Réception:</strong> <span t-field="doc.reception_id.name"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Date:</strong> <span t-field="doc.date_creation"/>
                                <br/>
                                <strong>Référence:</strong> <span t-field="doc.name"/>
                            </div>
                        </div>

                        <!-- Tableau des détails de ventes -->
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Vente</th>
                                    <th>Client</th>
                                    <th>Produit</th>
                                    <th>Qualité</th>
                                     <th>Type Colis</th>
                                    <th>Nombre</th>
                                    <th>Poids Net</th>
                                    <th class="text-right">Prix/kg</th>
                                    <th class="text-right">Taux</th>
                                    <th class="text-right">Montant</th>
                                    <th class="text-right">Commission</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="sorted_sales" t-as="line">
                                    <td><span t-field="line.date_vente" t-options="{'widget': 'date'}"/></td>
                                    <td><span t-field="line.vente_id.name"/></td>
                                    <td><span t-field="line.client_id.name"/></td>
                                    <td><span t-field="line.produit_id.name"/></td>
                                    <td><span t-field="line.qualite_id.name"/></td>
                                      <td><span t-field="line.type_colis_id.name"/></td>
                                    <td class="text-right"><span t-field="line.nombre_colis"/></td>
                                    <td class="text-right"><span t-field="line.poids_net"/></td>
                                    <td class="text-right"><span t-field="line.prix_unitaire"/></td>
                                    <td class="text-right"><span t-field="line.taux_commission"/>%</td>
                                    <td class="text-right"><span t-field="line.montant_net"/></td>
                                    <td class="text-right"><span t-field="line.montant_commission"/></td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Sommaire et marges -->
                        <div class="row">
                            <div class="col-7">
                                <!-- Informations sur les marges -->
                                <div class="mt-4">
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td colspan="2"><strong>Marges appliquées:</strong></td>
                                        </tr>
                                        <tr>
                                            <td>Fruits:</td>
                                            <td><t t-esc="fruit_margin"/> %</td>
                                        </tr>
                                        <tr>
                                            <td>Légumes:</td>
                                            <td><t t-esc="vegetable_margin"/> %</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <div class="col-5">
                                <table class="table table-sm">
                                    <tr>
                                        <td class="text-right"><strong>Total Ventes:</strong></td>
                                        <td class="text-right"><span t-field="doc.total_ventes"/></td>
                                    </tr>
                                    <tr>
                                        <td class="text-right"><strong>Total Commission:</strong></td>
                                        <td class="text-right"><span t-field="doc.total_commission"/></td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="text-right"><strong>Net à Payer:</strong></td>
                                        <td class="text-right"><strong><span t-field="doc.net_a_payer"/></strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
