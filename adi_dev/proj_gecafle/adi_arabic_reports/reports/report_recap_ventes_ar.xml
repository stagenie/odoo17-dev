<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Template du Bordereau Récapitulatif sans commissions en Arabe (CORRIGÉ) -->
    <template id="report_reception_recap_ar">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <t t-set="company" t-value="doc.company_id"/>

                    <!-- Récupération et tri des lignes -->
                    <t t-set="recap_lines" t-value="doc.recap_line_ids or []"/>
                    <t t-set="sorted_lines"
                       t-value="doc.recap_line_ids.sorted(lambda x: x.qualite_id.classification or '')"/>

                    <div class="page" dir="rtl">
                        <!-- Titre et en-tête -->
                        <h2 class="text-center mb-4">كشف إجمالي المبيعات</h2>

                        <div class="row mb-4">
                            <div class="col-6 text-right">
                                <strong>المنتج:</strong>
                                <t t-if="doc.producteur_id">
                                    <span t-field="doc.producteur_id.name"/>
                                </t>
                                <t t-else="">
                                    <span>غير محدد</span>
                                </t>
                            </div>
                            <div class="col-6">
                                <strong>رقم الاستلام (الفوليو):</strong>
                                <t t-if="doc.reception_id">
                                    <span t-field="doc.reception_id.name"/>
                                </t>
                                <t t-else="">
                                    <span>غير محدد</span>
                                </t>
                            </div>
                        </div>

                        <!-- Tableau des lignes récapitulatives AVEC ORDRE INVERSÉ -->
                        <table class="table table-sm table-bordered">
                            <thead>
                                <tr>
                                    <!-- ORDRE INVERSÉ : De droite à gauche -->
                                    <th class="text-center">المنتج</th>
                                    <th class="text-center">الجودة</th>
                                    <th class="text-center">نوع العبوة</th>
                                    <th class="text-center">عدد العبوات</th>
                                    <th class="text-center">الوزن الصافي</th>
                                    <th class="text-center">السعر/الوحدة</th>
                                    <th class="text-right">مبلغ البيع</th>
                                    <th class="text-right">العمولة</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="sorted_lines" t-as="line">
                                    <!-- DONNÉES DANS LE MÊME ORDRE -->
                                    <td class="text-center">
                                        <t t-if="line.produit_id">
                                            <span t-field="line.produit_id.name"/>
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <t t-if="line.qualite_id">
                                            <span t-field="line.qualite_id.name"/>
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <t t-if="line.type_colis_id">
                                            <span t-field="line.type_colis_id.name"/>
                                        </t>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.nombre_colis"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.poids_net"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.prix_unitaire"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.montant_vente"/>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.montant_commission"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>

                        <!-- Tableau des totaux AVEC ORDRE INVERSÉ -->
                        <div class="row">
                            <div class="col-7">
                                <!-- Espace vide à gauche -->
                            </div>
                            <div class="col-5">
                                <table class="table table-sm">
                                    <tr>
                                        <td class="text-right">
                                            <strong>إجمالي المبيعات:</strong>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="doc.total_ventes"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="text-right">
                                            <strong>إجمالي العمولة:</strong>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="doc.total_commission"/>
                                        </td>
                                    </tr>
                                    <tr class="border-top">
                                        <td class="text-right">
                                            <strong>الصافي للدفع:</strong>
                                        </td>
                                        <td class="text-left">
                                            <strong>
                                                <span t-field="doc.net_a_payer"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Date et signature -->
                        <div class="row mt-5">
                            <div class="col-6 text-right">
                                <p>التاريخ: <span t-field="doc.date_creation"/></p>
                            </div>
                            <div class="col-6">
                                <p>التوقيع: _______________________</p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Définition du rapport -->
    <record id="action_report_reception_recap_ar" model="ir.actions.report">
        <field name="name">كشف إجمالي المبيعات</field>
        <field name="model">gecafle.reception.recap</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_arabic_reports.report_reception_recap_ar</field>
        <field name="report_file">adi_arabic_reports.report_reception_recap_ar</field>
        <field name="binding_model_id" ref="adi_gecafle_ventes.model_gecafle_reception_recap"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
        <field name="print_report_name">'كشف - %s' % object.name</field>
    </record>
</odoo>
