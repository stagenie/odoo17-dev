<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence Avoir Client -->
        <record id="seq_gecafle_avoir_client" model="ir.sequence">
            <field name="name">Séquence des avoirs client</field>
            <field name="code">gecafle.avoir.client</field>
            <field name="prefix">AVC/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Séquence Avoir Producteur -->
        <record id="seq_gecafle_avoir_producteur" model="ir.sequence">
            <field name="name">Séquence des avoirs producteur</field>
            <field name="code">gecafle.avoir.producteur</field>
            <field name="prefix">AVP/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- AJOUT : Séquence pour le Bordereau Récapitulatif -->
        <record id="seq_gecafle_reception_recap" model="ir.sequence">
            <field name="name">Séquence Bordereau Récapitulatif</field>
            <field name="code">gecafle.reception.recap</field>
            <field name="prefix">REC/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>

</odoo>
