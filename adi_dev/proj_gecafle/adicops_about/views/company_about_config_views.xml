<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Liste -->
    <record id="view_company_about_config_list" model="ir.ui.view">
        <field name="name">company.about.config.list</field>
        <field name="model">company.about.config</field>
        <field name="arch" type="xml">
            <tree string="Configurations About">
                <field name="company_name"/>
                <field name="domain"/>
                <field name="experience_years"/>
                <field name="is_default"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vue Formulaire -->
    <record id="view_company_about_config_form" model="ir.ui.view">
        <field name="name">company.about.config.form</field>
        <field name="model">company.about.config</field>
        <field name="arch" type="xml">
            <form string="Configuration About">
                <sheet>
                    <field name="active" invisible="1"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-check"
                                invisible="active">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Activé</span>
                            </div>
                        </button>
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-times"
                                invisible="not active">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Désactivé</span>
                            </div>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="company_name" class="oe_edit_only"/>
                        <h1>
                            <field name="company_name" placeholder="Nom de votre société..."/>
                        </h1>
                        <field name="slogan" placeholder="Votre slogan..."/>
                    </div>

                    <group>
                        <group name="company_info" string="Informations Société">
                            <field name="domain"/>
                            <field name="experience_years"/>
                            <field name="app_name"/>
                            <field name="is_default"/>
                        </group>
                        <group name="logo_group" string="Logo">
                            <field name="logo" widget="image" class="oe_avatar"/>
                        </group>
                    </group>

                    <group string="Adresse">
                        <field name="address" nolabel="1"/>
                    </group>
                    <group>
                        <field name="tel_mob" placeholder="TEl / Mob"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Fenêtre Configuration (Admin seulement) -->
    <record id="action_company_about_config" model="ir.actions.act_window">
        <field name="name">Configuration About</field>
        <field name="res_model">company.about.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configurez les informations de votre société !
            </p>
            <p>
                Définissez les informations qui seront affichées dans la section About
                accessible à tous les utilisateurs.
            </p>
        </field>
    </record>

    <!-- Menu Configuration (Admin seulement) -->
    <menuitem id="menu_company_about_config"
              name="Configuration About"
              parent="base.menu_administration"
              action="action_company_about_config"
              groups="base.group_system"
              sequence="99"/>
</odoo>
