<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_gecafle_produit_form" model="ir.ui.view">
        <field name="name">gecafle.produit.form</field>
        <field name="model">gecafle.produit</field>
        <field name="arch" type="xml">
            <form string="Produit">
                <sheet>
                    <field name="fruit_legume_id"/>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom du produit"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="producteur_id" />
                            <field name="type" widget="radio"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View - MODIFIÉ: list → tree -->
    <record id="view_gecafle_produit_tree" model="ir.ui.view">
        <field name="name">gecafle.produit.tree</field>
        <field name="model">gecafle.produit</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="producteur_id"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_gecafle_produit_search" model="ir.ui.view">
        <field name="name">gecafle.produit.search</field>
        <field name="model">gecafle.produit</field>
        <field name="arch" type="xml">
            <search string="Recherche Produits">
                <field name="name"/>
                <field name="producteur_id"/>
                <filter string="Fruits" name="fruits" domain="[('type', '=', 'fruit')]"/>
                <filter string="Légumes" name="legumes" domain="[('type', '=', 'legume')]"/>
                <filter string="Producteur" name="producteur_id" context="{'group_by': 'producteur_id'}"/>
                <filter string="Type" name="type" context="{'group_by': 'type'}"/>
            </search>
        </field>
    </record>
</odoo>
