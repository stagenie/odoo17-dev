<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_gecafle_fruits_form" model="ir.ui.view">
        <field name="name">gecafle.fruits.form</field>
        <field name="model">gecafle.fruits_legumes</field>
        <field name="arch" type="xml">
            <form string="Produit">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom du produit"/>
                        </h1>
                    </div>
                    <group>
                        <field name="type" widget="radio"/>
                        <field name="description" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree View - MODIFIÉ: list → tree -->
    <record id="view_gecafle_fruits_legumes_tree" model="ir.ui.view">
        <field name="name">gecafle.produit.gecafle.fruits_legumestree</field>
        <field name="model">gecafle.fruits_legumes</field>
        <field eval="10" name="priority"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_gecafle_fruits_legumes_search" model="ir.ui.view">
        <field name="name">gecafle.gecafle.fruits_legumes.search</field>
        <field name="model">gecafle.fruits_legumes</field>
        <field name="arch" type="xml">
            <search string="Recherche Produits">
                <field name="name"/>
                <filter string="Fruits"
                        name="fruits" domain="[('type', '=', 'fruit')]"/>
                <filter string="Légumes" name="legumes" domain="[('type', '=', 'legume')]"/>
                <filter string="Type" name="type" context="{'group_by': 'type'}"/>
            </search>
        </field>
    </record>
</odoo>
