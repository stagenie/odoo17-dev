<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire héritée pour account.move -->
    <record id="view_move_form_inherit_valorisee" model="ir.ui.view">
        <field name="name">account.move.form.inherit.valorisee</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Ajout du bouton intelligent vers la réception -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="reception_valorisee_id" invisible="1"/>
                <button name="action_view_reception_source"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-truck"
                        invisible="not reception_valorisee_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Réception</span>
                        <span class="o_stat_text">Valorisée</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
