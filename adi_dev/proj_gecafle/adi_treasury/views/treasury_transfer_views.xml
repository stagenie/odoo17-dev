<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree pour les transferts -->
    <record id="view_treasury_transfer_tree" model="ir.ui.view">
        <field name="name">treasury.transfer.tree</field>
        <field name="model">treasury.transfer</field>
        <field name="arch" type="xml">
            <tree string="Transferts de trésorerie"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'confirm'"
                  decoration-success="state == 'done'"
                  decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="date"/>
                <field name="transfer_type"/>
                <field name="cash_from_id" optional="show"/>
                <field name="safe_from_id" optional="show"/>
                <field name="cash_to_id" optional="show"/>
                <field name="safe_to_id" optional="show"/>
                <field name="amount" sum="Total" widget="monetary"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="user_id" widget="many2one_avatar_user" optional="show"/>

                <field name="state"
                       widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'confirm'"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'cancel'"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form pour les transferts -->
    <!-- Vue Form pour les transferts -->
    <!-- Vue Form pour les transferts -->
<record id="view_treasury_transfer_form" model="ir.ui.view">
    <field name="name">treasury.transfer.form</field>
    <field name="model">treasury.transfer</field>
    <field name="arch" type="xml">
        <form string="Transfert de trésorerie">
            <header>
                <button name="action_confirm"
                        string="Confirmer"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'draft'"/>
                <button name="action_done"
                        string="Effectuer le transfert"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'confirm'"
                        confirm="Êtes-vous sûr de vouloir effectuer ce transfert ?"/>
                <button name="action_cancel"
                        string="Annuler"
                        type="object"
                        invisible="state not in ('draft','confirm')"/>
                <button name="action_draft"
                        string="Remettre en brouillon"
                        type="object"
                        invisible="state != 'cancel'"/>
                <button name="%(action_report_treasury_transfer)d"
                        string="Imprimer"
                        type="action"
                        class="btn-secondary"
                        icon="fa-print"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" readonly="1"/>
                    </h1>
                </div>

                <group>
                    <field name="transfer_type" widget="radio" options="{'horizontal': true}"/>
                </group>

                <group>
                    <group string="Source">
                        <!-- Caisse source -->
                        <field name="cash_from_id"
                               options="{'no_create': True}"
                               readonly="state != 'draft'"
                               invisible="transfer_type not in ['cash_to_cash', 'cash_to_safe']"
                               required="transfer_type in ['cash_to_cash', 'cash_to_safe'] and state == 'draft'"/>

                        <!-- Coffre source -->
                        <field name="safe_from_id"
                               options="{'no_create': True}"
                               readonly="state != 'draft'"
                               invisible="transfer_type not in ['safe_to_cash', 'safe_to_safe']"
                               required="transfer_type in ['safe_to_cash', 'safe_to_safe'] and state == 'draft'"/>

                        <label for="balance_before_from" string="Solde"/>
                        <div class="o_row">
                            <field name="balance_before_from" readonly="1" nolabel="1"/>
                            <span invisible="state != 'done'" class="mx-2">→</span>
                            <field name="balance_after_from"
                                   readonly="1"
                                   nolabel="1"
                                   invisible="state != 'done'"
                                   class="text-danger"/>
                        </div>
                    </group>

                    <group string="Destination">
                        <!-- Caisse destination -->
                        <field name="cash_to_id"
                               options="{'no_create': True}"
                               readonly="state != 'draft'"
                               invisible="transfer_type not in ['cash_to_cash', 'safe_to_cash']"
                               required="transfer_type in ['cash_to_cash', 'safe_to_cash'] and state == 'draft'"/>

                        <!-- Coffre destination -->
                        <field name="safe_to_id"
                               options="{'no_create': True}"
                               readonly="state != 'draft'"
                               invisible="transfer_type not in ['cash_to_safe', 'safe_to_safe']"
                               required="transfer_type in ['cash_to_safe', 'safe_to_safe'] and state == 'draft'"/>

                        <label for="balance_before_to" string="Solde"/>
                        <div class="o_row">
                            <field name="balance_before_to" readonly="1" nolabel="1"/>
                            <span invisible="state != 'done'" class="mx-2">→</span>
                            <field name="balance_after_to"
                                   readonly="1"
                                   nolabel="1"
                                   invisible="state != 'done'"
                                   class="text-success"/>
                        </div>
                    </group>
                </group>

                <group>
                    <group>
                        <field name="amount"
                               widget="monetary"
                               options="{'currency_field': 'currency_id'}"
                               class="oe_inline"
                               readonly="state != 'draft'"/>
                        <field name="currency_id" invisible="1"/>
                        <field name="date" readonly="state != 'draft'"/>
                    </group>
                    <group>
                        <field name="user_id" readonly="1" widget="many2one_avatar_user"/>
                        <field name="validated_by"
                               readonly="1"
                               widget="many2one_avatar_user"
                               invisible="not validated_by"/>
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                </group>

                <group string="Description">
                    <field name="description"
                           placeholder="Ajoutez une description du transfert..."
                           readonly="state != 'draft'"/>
                </group>
                <group string="Opérations de caisse liées" col="4" invisible="not cash_operation_out_id and not cash_operation_in_id">
                        <field name="cash_operation_out_id" readonly="1"/>
                        <field name="cash_operation_in_id" readonly="1"/>
                </group>
            </sheet>
            <chatter/>
        </form>
    </field>
</record>


    <!-- Vue Kanban pour les transferts -->
    <record id="view_treasury_transfer_kanban" model="ir.ui.view">
        <field name="name">treasury.transfer.kanban</field>
        <field name="model">treasury.transfer</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" quick_create="false">
                <field name="name"/>
                <field name="cash_from_id"/>
                <field name="cash_to_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="date"/>
                <field name="state"/>
                <field name="color"/>
                <progressbar field="state" colors='{"done": "success", "cancel": "muted"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <strong>
                                    <field name="amount" widget="monetary"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <field name="cash_from_id"/>
                                    <i class="fa fa-arrow-right mx-1"/>
                                    <field name="cash_to_id"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search pour les transferts -->
    <record id="view_treasury_transfer_search" model="ir.ui.view">
        <field name="name">treasury.transfer.search</field>
        <field name="model">treasury.transfer</field>
        <field name="arch" type="xml">
            <search string="Rechercher un transfert">
                <field name="name"/>
                <field name="cash_from_id"/>
                <field name="cash_to_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirm" domain="[('state', '=', 'confirm')]"/>
                <filter string="Effectué" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter string="Aujourd'hui" name="today"
                        domain="[('date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),
                                ('date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter string="Cette semaine" name="week"
                        domain="[('date', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).replace(hour=0, minute=0, second=0))]"/>
                <filter string="Ce mois" name="month"
                        domain="[('date', '&gt;=', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Caisse source" name="group_from" context="{'group_by': 'cash_from_id'}"/>
                    <filter string="Caisse destination" name="group_to" context="{'group_by': 'cash_to_id'}"/>
                    <filter string="Utilisateur" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les transferts -->
    <record id="action_treasury_transfer" model="ir.actions.act_window">
        <field name="name">Transferts</field>
        <field name="res_model">treasury.transfer</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_treasury_transfer_search"/>
        <field name="context">{'search_default_done': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier transfert
            </p>
            <p>
                Les transferts permettent de déplacer des fonds entre vos différentes caisses de manière sécurisée et
                traçable.
            </p>
        </field>
    </record>
</odoo>
