<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue Tree pour les opérations de coffre -->
    <record id="view_treasury_safe_operation_tree" model="ir.ui.view">
        <field name="name">treasury.safe.operation.tree</field>
        <field name="model">treasury.safe.operation</field>
        <field name="arch" type="xml">
            <tree string="Opérations de coffre"
                  decoration-success="operation_type in ['initial', 'bank_in', 'other_in']"
                  decoration-danger="operation_type in ['bank_out', 'other_out']"
                  decoration-info="operation_type == 'adjustment'"
                  decoration-muted="state == 'cancel'">
                <field name="name"/>
                <field name="safe_id"/>
                <field name="date"/>
                <field name="operation_type"/>
                <field name="amount" widget="monetary" sum="Total"/>
                <field name="currency_id" column_invisible="True"/>
                <field name="bank_reference" optional="show"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'confirmed'"
                       decoration-success="state == 'done'"
                       decoration-muted="state == 'cancel'"/>
                <field name="user_id" widget="many2one_avatar_user" optional="show"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form pour les opérations de coffre -->
    <record id="view_treasury_safe_operation_form" model="ir.ui.view">
        <field name="name">treasury.safe.operation.form</field>
        <field name="model">treasury.safe.operation</field>
        <field name="arch" type="xml">
            <form string="Opération de coffre">
                <header>
                    <button name="action_confirm"
                            string="Confirmer"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_done"
                            string="Effectuer l'opération"
                            type="object"
                            class="oe_highlight"
                            invisible="state != 'confirmed'"
                            confirm="Êtes-vous sûr de vouloir effectuer cette opération ?"/>
                    <button name="action_cancel"
                            string="Annuler"
                            type="object"
                            invisible="state not in ('draft','confirmed')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>

                    <!-- Alerte pour solde initial -->
                    <div class="alert alert-info text-center" role="alert" invisible="operation_type != 'initial'">
                        <strong>Opération d'initialisation du coffre</strong>
                        <br/>Cette opération définira le solde initial du coffre.
                    </div>

                    <group>
                        <group>
                            <field name="safe_id"
                                   options="{'no_create': True}"
                                   readonly="state != 'draft'"/>
                            <field name="operation_type"
                                   readonly="state != 'draft'"
                                   widget="selection"/>
                            <field name="date" readonly="state != 'draft'"/>
                        </group>

                        <group>
                            <field name="amount"
                                   widget="monetary"
                                   options="{'currency_field': 'currency_id'}"
                                   readonly="state != 'draft'"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="bank_reference"
                                   placeholder="Ex: Chèque n°, Virement..."
                                   readonly="state != 'draft'"
                                   invisible="operation_type not in ['bank_in', 'bank_out']"/>
                        </group>
                    </group>

                    <group string="Soldes" col="4">
                        <field name="balance_before" readonly="1"/>
                        <span invisible="state != 'done'" class="mx-2">→</span>
                        <field name="balance_after"
                               readonly="1"
                               invisible="state != 'done'"/>
                    </group>

                    <group string="Description">
                        <field name="description"
                               placeholder="Description de l'opération..."
                               readonly="state != 'draft'"/>
                    </group>

                    <group string="Informations" col="4">
                        <field name="user_id" readonly="1" widget="many2one_avatar_user"/>
                        <field name="validated_by"
                               readonly="1"
                               widget="many2one_avatar_user"
                               invisible="not validated_by"/>
                        <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vue Kanban pour les opérations -->
    <record id="view_treasury_safe_operation_kanban" model="ir.ui.view">
        <field name="name">treasury.safe.operation.kanban</field>
        <field name="model">treasury.safe.operation</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_mobile" quick_create="false">
                <field name="name"/>
                <field name="safe_id"/>
                <field name="operation_type"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="date"/>
                <field name="state"/>
                <progressbar field="state" colors='{"done": "success", "cancel": "muted"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb16">
                                <div class="o_kanban_record_headings mt4">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <strong><field name="safe_id"/></strong>
                                </div>
                                <div>
                                    <field name="operation_type"/>
                                </div>
                                <div class="mt-2">
                                    <strong>
                                        <field name="amount" widget="monetary"/>
                                    </strong>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="date" widget="date"/>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="state" widget="badge"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vue Search pour les opérations -->
    <record id="view_treasury_safe_operation_search" model="ir.ui.view">
        <field name="name">treasury.safe.operation.search</field>
        <field name="model">treasury.safe.operation</field>
        <field name="arch" type="xml">
            <search string="Rechercher une opération">
                <field name="name"/>
                <field name="safe_id"/>
                <field name="bank_reference"/>
                <field name="description"/>
                <separator/>
                <!-- Filtres par état -->
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmé" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Effectué" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Annulé" name="cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <!-- Filtres par type -->
                <filter string="Solde initial" name="initial" domain="[('operation_type', '=', 'initial')]"/>
                <filter string="Entrées banque" name="bank_in" domain="[('operation_type', '=', 'bank_in')]"/>
                <filter string="Sorties banque" name="bank_out" domain="[('operation_type', '=', 'bank_out')]"/>
                <filter string="Ajustements" name="adjustment" domain="[('operation_type', '=', 'adjustment')]"/>
                <separator/>
                <!-- Filtres par date -->
                <filter string="Aujourd'hui" name="today"
                        domain="[('date', '&gt;=', datetime.datetime.now().replace(hour=0, minute=0, second=0)),
                                ('date', '&lt;=', datetime.datetime.now().replace(hour=23, minute=59, second=59))]"/>
                <filter string="Cette semaine" name="week"
                        domain="[('date', '&gt;=', (datetime.datetime.now() - datetime.timedelta(days=datetime.datetime.now().weekday())).replace(hour=0, minute=0, second=0))]"/>
                <filter string="Ce mois" name="month"
                        domain="[('date', '&gt;=', datetime.datetime.now().replace(day=1, hour=0, minute=0, second=0))]"/>
                <group expand="0" string="Grouper par">
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Type d'opération" name="group_type" context="{'group_by': 'operation_type'}"/>
                    <filter string="Coffre" name="group_safe" context="{'group_by': 'safe_id'}"/>
                    <filter string="Utilisateur" name="group_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action pour les opérations de coffre -->
    <record id="action_treasury_safe_operation" model="ir.actions.act_window">
        <field name="name">Opérations de coffre</field>
        <field name="res_model">treasury.safe.operation</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="search_view_id" ref="view_treasury_safe_operation_search"/>
        <field name="context">{'search_default_done': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une opération de coffre
            </p>
            <p>
                Les opérations permettent de gérer les entrées/sorties d'argent dans les coffres.<br/>
                Types d'opérations : Solde initial, Entrée/Sortie banque, Ajustements.
            </p>
        </field>
    </record>
</odoo>
