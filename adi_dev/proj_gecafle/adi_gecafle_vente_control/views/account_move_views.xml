<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue formulaire facture avec indicateur de protection -->
    <record id="view_move_form_inherit_control" model="ir.ui.view">
        <field name="name">account.move.form.inherit.control</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Indicateur visuel de protection -->
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning text-center"
                     invisible="not is_protected_gecafle">
                    <i class="fa fa-lock"/> Cette facture est protégée (générée depuis une vente GECAFLE)
                </div>
            </xpath>

            <!-- Champ invisible -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="is_protected_gecafle" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
