<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <!-- Action pour la liste des réceptions -->
        <record id="action_gecafle_reception_list" model="ir.actions.act_window">
            <field name="name">Réceptions</field>
            <field name="res_model">gecafle.reception</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Menu principal de l'application Réception -->
        <menuitem id="menu_gecafle_reception_root"
                  name="Réception"
                  sequence="10"
                  web_icon="adi_gecafle_receptions,static/description/reception.png"/>


        <!-- Sous-menu Réceptions
        pointant vers l'action liste des réceptions -->
        <menuitem id="menu_gecafle_reception"
                  name="Réceptions"
                  parent="menu_gecafle_reception_root"
                  action="action_gecafle_reception_list"
                  sequence="1"/>


        <!-- Vue liste (tree) pour le modèle gecafle.reception -->
        <record id="view_gecafle_reception_tree" model="ir.ui.view">
            <field name="name">gecafle.reception.tree</field>
            <field name="model">gecafle.reception</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" string="N° de Réception"/>
                    <field name="reception_date" string="Date Heure"/>
                    <field name="currency_id" invisible="1" optional="hide"/>
                    <field name="producteur_id" string="Producteur"/>
                    <field name="producteur_id" string="Producteur"/>
                    <field name="state" string="État" widget="badge"
                           decoration-info="state == 'brouillon'"
                           decoration-danger="state == 'annulee'"
                           decoration-success="state == 'confirmee'"/>
                    <field name="avance_producteur"
                           sum="Total avances producteurs"
                           string="Avance Producteur"
                           widget="monetary" options="{'currency_field': 'currency_id'}"
                    />

                    <field name="est_imprimee" string="Imprimé?" optional="hide"/>

                    <button name="action_print_bon_reception"
                            string="Imprimer" type="object"
                            icon="fa-print" class="btn-link"
                            invisible="state != 'confirmee'"/>
                </tree>
            </field>
        </record>

        <!-- Action pour consulter le stock-->
        <record id="action_stock_view" model="ir.actions.act_window">
            <field name="name">Stocks</field>
            <field name="res_model">gecafle.stock</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('reception_id', '=', active_id)]</field>
            <field name="context">{'default_readonly': True, 'no_create': True, 'no_edit': True}</field>
        </record>
        <record id="view_gecafle_stock_list" model="ir.ui.view">
            <field name="name">gecafle.stock.list</field>
            <field name="model">gecafle.stock</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="reception_id"/>
                    <field name="producteur_id"/>
                    <field name="reception_date"/>
                    <field name="designation_id"/>
                    <field name="qualite_id"/>
                    <field name="emballage_id"/>
                    <field name="qte_disponible"/>
                </tree>
            </field>
        </record>

        <!-- Vue formulaire (form) pour le modèle gecafle.reception -->
        <record id="view_gecafle_reception_form" model="ir.ui.view">
            <field name="name">gecafle.reception.form</field>
            <field name="model">gecafle.reception</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- Widget statusbar pour visualiser l'état -->
                        <field name="state" widget="statusbar"
                               statusbar_visible="brouillon,confirmee"/>
                        <!-- Boutons avec visibilité conditionnelle -->
                        <button string="Confirmer" type="object"
                                confirm="Êtes-vous sûr de vouloir confirmer cette réception?"
                                name="action_confirm"
                                class="btn-primary" invisible="state != 'brouillon'"/>

                        <button string="Annuler" type="object"
                                confirm="Êtes-vous sûr de vouloir annuler cette réception?"
                                name="action_cancel"
                                class="btn-danger" invisible="state not in ('brouillon', 'confirmee')"/>
                        <button name="action_reset_to_draft"
                                confirm="Êtes-vous sûr de vouloir remettre cette réception en brouillon?"
                                string="Remettre en brouillon"
                                invisible="state not in ('confirmee')"
                                type="object"/>
                        <button name="action_print_bon_reception"
                                string="Imprimer le Bon de Réception (A5)"
                                invisible="state not in ('confirmee')"
                                type="object"
                                class="btn-primary"
                        />
                        <button name="action_print_duplicata"
                                string="Imprimer Duplicata"
                                type="object"
                                class="oe_highlight"
                                invisible="state not in ('confirmee')"
                                groups="base.group_user"/>

                        <button name="action_create_emballage_producteur"
                                string="Créer Op Emball Producteur"
                                type="object"
                                class="btn-secondary"
                                icon="fa-truck"
                                invisible="state != 'confirmee'"
                                help="Créer une opération emballage producteur basée sur cette réception"/>

                        <button name="action_create_advance_payment"
                                string="Enregistrer Avance"
                                type="object"
                                class="btn-info"
                                icon="fa-money"
                                invisible="not id"
                                help="Ouvrir le formulaire de paiement pour enregistrer l'avance producteur. Disponible une fois la réception créée."/>

                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <!-- Smart Button pour consulter le stock -->
                            <button name="%(action_stock_view)d" string="Stock ([%s])"
                                    type="action" class="oe_stat_button"
                                    invisible="state not in ('confirmee')"
                                    icon="fa-cubes">
                                <field name="stock_count"
                                       widget="statinfo"
                                />
                            </button>
                            <button name="action_view_emballage_producteur"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    invisible="emballage_producteur_count == 0">
                                <field name="emballage_producteur_count" widget="statinfo" string="Op. Emballage"/>
                            </button>
                            <button name="action_view_payments"
                                    type="object"
                                    class="oe_stat_button"
                                    invisible="payment_count == 0"
                                    icon="fa-money">
                                <field name="payment_count"
                                       widget="statinfo"
                                       string="Paiements"/>
                            </button>


                        </div>
                        <h3 class="o_form_view_title">
                            <field name="name" readonly="1" placeholder="N° de Réception"/>
                        </h3>
                        <group>
                            <group>
                                <!-- options="{'no_create': True}"-->
                                <field name="producteur_id"/>
                                <field name="adresse_producteur" readonly="1"/>
                                <field name="phone_producteur" readonly="1"/>
                                <field name="avance_producteur"
                                       widget="monetary"
                                       help="Montant de l'avance à verser au producteur"
                                />
                                <field name="verse_a"/>
                            </group>
                            <group>
                                <field name="reception_date"/>
                                <!--<field name="regrouper_lignes" invisble="1"/>-->
                                <field name="user_id" readonly="1"/>
                                <field name="est_imprimee" string="Imprimé?" readonly="1"/>
                                <field name="emballage_producteur_count" invisible="1"/>

                            </group>

                        </group>


                    </sheet>
                    <!-- Chatter pour la traçabilité -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue recherche (search) pour le modèle gecafle.reception -->
        <record id="view_gecafle_reception_search" model="ir.ui.view">
            <field name="name">gecafle.reception.search</field>
            <field name="model">gecafle.reception</field>
            <field name="arch" type="xml">
                <search string="Recherche Réceptions">
                    <field name="name"/>
                    <field name="producteur_id"/>
                    <filter string="Brouillon" name="draft" domain="[('state','=','brouillon')]"/>
                    <filter string="Confirmée" name="confirmed" domain="[('state','=','confirmee')]"/>
                    <filter string="Annulée" name="canceled" domain="[('state','=','annulee')]"/>
                    <group expand="0" string="Périodes">
                        <filter string="Date de réception" name="filter_reception_date"
                                date="reception_date"/>
                        <filter string="Aujourd'hui" name="today"
                                domain="[('reception_date', '>=', context_today())]"/>
                        <filter string="Cette semaine" name="this_week"
                                domain="[('reception_date', '>=', (context_today() + relativedelta(weeks=-1, days=1, weekday=0)).strftime('%Y-%m-%d'))]"/>
                        <filter string="Ce mois" name="this_month"
                                domain="[('reception_date', '>=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>

                    </group>
                    <group expand="0" string="Regrouper par">
                        <filter string="Producteur" name="producteur" context="{'group_by': 'producteur_id'}"/>
                        <filter string="État" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="reception_date" context="{'group_by': 'reception_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>