<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Tâche planifiée pour scanner les répertoires -->
    <record id="ir_cron_scan_backup_directories" model="ir.cron">
        <field name="name">Scan des Répertoires de Backup</field>
        <field name="model_id" ref="model_backup_directory"/>
        <field name="state">code</field>
        <field name="code">model.cron_scan_directories()</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
        <field name="priority">5</field>
    </record>
</odoo>
