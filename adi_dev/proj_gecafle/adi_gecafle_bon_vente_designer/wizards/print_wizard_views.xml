<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_print_bon_vente_wizard_form" model="ir.ui.view">
        <field name="name">print.bon.vente.wizard.form</field>
        <field name="model">print.bon.vente.wizard</field>
        <field name="arch" type="xml">
            <form string="Imprimer Bon de Vente">
                <field name="vente_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="is_duplicata" invisible="1"/>

                <div class="alert alert-info text-center" role="alert" invisible="not is_duplicata">
                    <strong>Mode DUPLICATA</strong>
                </div>

                <group>
                    <group string="Sélection du Modèle">
                        <field name="template_id"
                               options="{'no_create': True, 'no_open': True}"
                               placeholder="Sélectionnez un modèle..."/>
                        <field name="set_as_default"/>
                    </group>
                    <group string="Aperçu du Style" invisible="not template_id">
                        <field name="header_style" readonly="1"/>
                        <field name="body_style" readonly="1"/>
                        <div class="d-flex align-items-center">
                            <label for="primary_color" class="me-2"/>
                            <field name="primary_color" readonly="1" widget="color"/>
                        </div>
                    </group>
                </group>

                <!-- Aperçu visuel des styles -->
                <div class="row mt-4" invisible="not template_id">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header bg-primary text-white">
                                <strong>Aperçu du modèle sélectionné</strong>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <p><strong>En-tête:</strong>
                                            <span invisible="header_style != 'classic'">Classique Élégant - Style traditionnel avec lignes décoratives</span>
                                            <span invisible="header_style != 'modern'">Moderne Corporate - Design contemporain avec blocs colorés</span>
                                            <span invisible="header_style != 'premium'">Premium Luxe - Design haut de gamme avec bordures élégantes</span>
                                        </p>
                                    </div>
                                    <div class="col-6">
                                        <p><strong>Corps:</strong>
                                            <span invisible="body_style != 'standard'">Standard Amélioré - Tableau avec lignes alternées</span>
                                            <span invisible="body_style != 'modern'">Moderne Card-Based - Lignes avec effet carte et ombres</span>
                                            <span invisible="body_style != 'premium'">Premium Minimaliste - Design épuré et élégant</span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <footer>
                    <button name="action_preview"
                            string="Aperçu"
                            type="object"
                            class="btn-info"
                            icon="fa-eye"
                            invisible="not template_id"/>
                    <button name="action_print"
                            string="Imprimer"
                            type="object"
                            class="btn-primary"
                            icon="fa-print"
                            invisible="not template_id"/>
                    <button name="action_print_original"
                            string="Format Original"
                            type="object"
                            class="btn-secondary"
                            icon="fa-file-text-o"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir le wizard -->
    <record id="action_open_print_wizard" model="ir.actions.act_window">
        <field name="name">Imprimer Bon de Vente</field>
        <field name="res_model">print.bon.vente.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
