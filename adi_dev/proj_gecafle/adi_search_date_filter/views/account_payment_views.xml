<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Héritage de la vue de recherche des paiements -->
    <record id="view_account_payment_search_inherit_date" model="ir.ui.view">
        <field name="name">account.payment.search.inherit.date</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <!-- Ajouter le champ de recherche par date en premier -->
            <xpath expr="//search" position="inside">
                <field name="search_date" string="Rechercher Date"/>
            </xpath>
            <!-- Déplacer le champ search_date en première position -->
            <xpath expr="//search/field[1]" position="before">
                <field name="search_date" string="Rechercher Date"/>
                <separator/>
            </xpath>
        </field>
    </record>
</odoo>
