<odoo>
    <record id="group_view_all_expenses" model="res.groups">
        <field name="name">Voir toutes les dépenses</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>

    <record id="group_view_own_expenses" model="res.groups">
        <field name="name">Voir ses propres dépenses</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>

    <!-- Règles de sécurité -->
    <record id="depense_rule_all_users" model="ir.rule">
        <field name="name">Voir toutes les dépenses</field>
        <field name="model_id" ref="model_depenses_depense"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_view_all_expenses'))]"/>
    </record>

    <record id="depense_rule_own_user" model="ir.rule">
        <field name="name">Voir ses propres dépenses</field>
        <field name="model_id" ref="model_depenses_depense"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_view_own_expenses'))]"/>
    </record>
</odoo>
