<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="adicops_action_report_saleorder" model="ir.actions.report">
        <field name="name">ADI- Facture de Route</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_dz_faroute.adicops_report_saleorder</field>
        <field name="report_file">adi_dz_faroute.adicops_report_saleorder</field>
        <field name="print_report_name">(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
     
</odoo>
