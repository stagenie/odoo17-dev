<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pallet_movement_wizard" model="ir.ui.view">
        <field name="name">pallet.movement.wizard.form</field>
        <field name="model">pallet.movement.wizard</field>
        <field name="arch" type="xml">
            <form string="Mouvements des Palettes">
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                    </group>
                    <group>
                        <field name="product_template_ids" widget="many2many_tags"/>
                        <field name="include_all_variants"/>
                        <field name="product_variant_ids" widget="many2many_tags"
                               attrs="{'invisible': [('include_all_variants', '=', True)]}"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_report" string="Générer Rapport"
                            type="object" class="btn-primary"/>
                    <button string="Annuler" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
     <record id="action_pallet_movement_wizard" model="ir.actions.act_window">
        <field name="name">Rapport Mouvements Palettes</field>
        <field name="res_model">pallet.movement.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_pallet_movement_wizard"
              name="DSI - Rapport Mouvements Palettes"
              parent="stock.menu_warehouse_report"
              action="action_pallet_movement_wizard"
              sequence="-100"/>
</odoo>