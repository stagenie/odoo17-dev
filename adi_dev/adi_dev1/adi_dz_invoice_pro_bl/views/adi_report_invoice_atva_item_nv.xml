<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="adi_report_invoice_document_item_nv">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->
                
       <table  style="font-size:18px"  width="100%" class="table table-borderless">
          <tr>
                <td class="text-left" width="55%">  
                         <h5>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Bon de Livraison N°: </span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Bon de Livraison Brouillon</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Bon de Livraison Annulée</span>
                            <span t-if="o.move_type == 'out_refund'">Avoir</span>
                            <span t-if="o.move_type == 'in_refund'">Avoir Fournisseur</span>
                            <span t-if="o.move_type == 'in_invoice'">Facture Fournisseur</span>
                            <span t-if="o.name != '/'" t-field="o.num_bl"/>
                        </h5>

                        <div id="informations">
                            <div t-if="o.invoice_date" name="invoice_date">
                                <t t-if="o.move_type == 'out_invoice'"><strong>Date de Livraison:</strong></t>
                                <t t-elif="o.move_type == 'out_refund'"><strong>Date :</strong></t>
                                <t t-elif="o.move_type == 'out_receipt'"><strong>Date:</strong></t>
                                <t t-else=""><strong>Date:</strong></t>
                                <span  t-field="o.invoice_date"/>
                            </div>


                            <div  t-if="o.partner_id.ref" name="customer_code">
                                <strong>Code partenaire:</strong>
                                <span t-field="o.partner_id.ref"/>
                            </div>
                            <div t-if="o.ref" name="reference">
                                <strong>Reference:</strong>
                                <span  t-field="o.ref"/>
                            </div>
                        </div>
                                                                                                  
                </td>
                
                <td >                               
                <div style="line-height: 70%; font-size:14px; ">
            <!-- 
                border: 1px solid;border-width: 1px; 
            border-radius: 3px;padding-left: 10px; padding-bottom: 10px
            -->
                   
                    <div>
                        <strong><span t-field="o.partner_id.name"/></strong>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="o.partner_id.street"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="o.partner_id.street2"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="o.partner_id.phone"><strong>Tél :</strong> <span t-field="o.partner_id.phone"/></span>
                        <span t-if="o.partner_id.mobile"><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]><strong>Mobile :</strong> <span t-field="o.partner_id.mobile"/></span>
                    </div>
                    
	           

                <div style="line-height: 50%; padding-top:15px; font-size:12px;">
	                <div>
                        <span t-if="o.partner_id.rc"><strong>N° RC :</strong> <span t-field="o.partner_id.rc"/></span>
	                    <span t-if="o.partner_id.ai"><strong><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>AI :</strong> <span t-field="o.partner_id.ai"/></span>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="o.partner_id.nis"><strong>NIS :</strong>  <span t-field="o.partner_id.nis" style="text-align:left"/></span>
	                    <span t-if="o.partner_id.nif"><strong><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>NIF :</strong> <span t-field="o.partner_id.nif" style="text-align:left"/></span>
                    </div>
	            </div>
                 </div>
                </td>
            </tr> 
        </table>
     
        <!--
                 info fiscales 
                  <t t-set="address">
        
        </t>

        -->

                <div class="mt-5">
                    <div class="page">
                        
                        <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>

                        <table class="table table-sm o_main_table" name="invoice_line_table">
                            <thead>
                                <tr>
                                   <!--
                                   -->

                                    <th name="th_description" class="text-start"><span>Description</span></th>
                                    <th name="th_quantity" class="text-end"><span>Quantité</span></th>


                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" />

                                    <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>

                                            <td class="text-end">
                                                <span t-field="line.quantity"/>
                                                    <span t-field="line.product_uom_id"
                                                          groups="uom.group_uom"/>
                                               
                                            </td>


                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>


                                </t>
                            </tbody>
                        </table>




                    </div>
                    
                    <t t-set="payment_term_details" t-value="o.payment_term_details"/>




                     <div>

                    </div>
            
                    <div t-if="not is_html_empty(o.narration)" name="comment">
                        <span t-field="o.narration"/>
                    </div>
                    

                </div>
            </t>
        </template>





        <template id="adi_report_invoice_item_nv">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-if="o._get_name_invoice_report_adi_item_pro_nv() == 'adi_dz_invoice_pro_bl.adi_report_invoice_document_item_nv'"
                        t-call="adi_dz_invoice_pro_bl.adi_report_invoice_document_item_nv" t-lang="lang"/>
                </t>
            </t>
        </template>

        <template id="adi_report_invoice_with_payments_item">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.partner_id.lang"/>
                    <t t-set="print_with_payments" t-value="True"/>
                    <t t-if="o._get_name_invoice_report_adi_item_pro() == 'adi_dz_invoice_pro_bl.adi_report_invoice_document_item'"
                        t-call="adi_dz_invoice_pro_bl.adi_report_invoice_document_item" t-lang="lang"/>
                </t>
            </t>
        </template>

        <!--We need to create the following empty report template for the action report
            "action_account_original_vendor_bill" to work. The action is merging the
            original vendor bill(s) that were used to create the vendor bill(s) into one PDF. -->
        <template id="adi_report_original_vendor_bill">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="article"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')"></div>
                </t>
            </t>
        </template>
    </data>
</odoo>
