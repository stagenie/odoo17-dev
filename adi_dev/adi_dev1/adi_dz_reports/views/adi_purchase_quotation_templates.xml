<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="adi_report_purchasequotation_document">
    <t t-call="web.external_layout">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
         

      
             <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/> 
        <t t-set="address">
            <div t-field="o.partner_id"
                 t-options='{"widget": "contact", "fields": ["address", "name", "phone", "vat"], "no_marker": True, "phone_icons": True}'/>
        </t>
       
       
       
        <t t-if="o.dest_address_id">
            <t t-set="information_block">
                <strong>Adresse de livraison:</strong>
                <div t-field="o.dest_address_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
            </t>
        </t>
        <div class="page">
            <div class="oe_structure"/>

            <h3 class="mt-4 light-blue-text">Demande de Prix  <span t-field="o.name"/></h3>

            <table class="table table-sm mt-4">
                <thead style="display: table-row-group">
                    <tr>
<!--                        <th name="th_part_number"><strong>Part Number</strong></th>-->
                        <th name="th_reference"><strong>Référence</strong></th>
                        <th name="th_description"><strong>Description</strong></th>
                      <!--  <th name="th_expected_date" class="text-center"><strong>Date Planifiée</strong></th>-->
                        <th name="th_quantity" class="text-end"><strong>Qté</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="o.order_line" t-as="order_line">
                        <tr t-att-class="'bg-200 fw-bold o_line_section' if order_line.display_type == 'line_section' else 'fst-italic o_line_note' if order_line.display_type == 'line_note' else ''">
                            <t t-if="not order_line.display_type">
                                  <!--
                                  <td id="partnumber">
                                    <span t-field="order_line.product_id.partnumber"/>
                                </td>
                                  -->

                                <td id="reference">
                                    <span t-field="order_line.product_id.default_code"/>
                                </td>
                                <td id="product">
                                    <span t-field="order_line.name"/>
                                </td>

                                  <!-- 
                                    <td id="nom">
                                        <span t-field="order_line.product_id.name"/>
                                    </td>

                                  -->
                                
                                <!--
                                <td id="product">
                                    <span t-field="order_line.name"/>
                                </td>
                                
                                <td class="text-center">
                                    <span t-field="order_line.date_planned"/>
                                </td>
                                -->
                                <td class="text-end">
                                    <span t-field="order_line.product_qty"/>
                                    <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                                </td>
                            </t>
                            <t t-else="">
                                <td colspan="99" id="section">
                                    <span t-field="order_line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

            <p t-field="o.notes" class="mt-4"/>

            <div class="oe_structure"/>
        </div>
    </t>
</template>

<template id="adi_report_purchasequotation">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="adi_dz_reports.adi_report_purchasequotation_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
