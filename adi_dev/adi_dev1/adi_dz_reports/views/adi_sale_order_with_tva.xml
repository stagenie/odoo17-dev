<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="adicops_report_saleorder_document">
    <t t-call="web.external_layout">
        <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
        <t t-set="forced_vat" t-value="doc.fiscal_position_id.foreign_vat"/> <!-- So that it appears in the footer of the report instead of the company VAT if it's set -->

        <table  style="font-size:18px"  width="100%" class="table table-borderless">
          <tr>
            <td class="text-left" width="55%">   
                <h5>
                <span t-if="env.context.get('proforma', False) or is_pro_forma">Facture Pro-Forma # </span>
                <span t-elif="doc.state in ['draft','sent']">Proforma # </span>
                <span t-else="">Commande # </span>
                <span t-field="doc.name"/>       
                </h5>

            <div id="informations">
                <div t-if="doc.client_order_ref" name="informations_reference">                 
                 
                    <strong>Réference: </strong>
                                   <span t-field="doc.client_order_ref"/>                      
                </div>
                <div t-if="doc.date_order" name="informations_date">
                    <strong t-if="doc.state in ['draft', 'sent']">Date Proforma:</strong>
                    <strong t-else="">Date de Commande:</strong>
                    <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']"                    
                    name="expiration_date">
                    <strong>Expiration:</strong>
                    <span  t-field="doc.validity_date"/>
                </div>
                <div t-if="doc.user_id.name">
                    <div>
                        <strong>Vendeur:</strong>
                        <span  t-field="doc.user_id"/>
                    </div>    
                    <div t-if="doc.user_id.email">
                        <strong >Email:</strong>
                        <span t-field="doc.user_id.partner_id.email"/>
                    </div>
                    <div t-if ="doc.user_id.partner_id.mobile">
                        <strong >Mob:</strong>
                        <span t-field="doc.user_id.partner_id.mobile" />
                    </div>

                    
                </div>
            </div>


                </td>
                
                <td >             
                <div style="line-height: 70%; font-size:14px;">
            <!-- 
                style="line-height: 70%; font-size:13px; border: 1px solid;border-width: 1px; 
            border-radius: 3px;padding-left: 10px; padding-bottom: 10px">
            -->
                   
                    <div>
                        <strong><span t-field="doc.partner_id.name"/></strong>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="doc.partner_id.street"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-field="doc.partner_id.street2"/>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="doc.partner_id.phone"><strong>Tél :</strong> <span t-field="doc.partner_id.phone"/></span>
                        <span t-if="doc.partner_id.mobile"><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]><strong>Mobile :</strong> <span t-field="doc.partner_id.mobile"/></span>
                    </div>
                     <div style="padding-top:10px;">
                        <span t-if="doc.partner_id.email"><strong>Email :</strong> <span t-field="doc.partner_id.email"/></span>
                    </div>
                    

                <div style="line-height: 50%; padding-top:15px; font-size:12px;">
	                <div>
                        <span t-if="doc.partner_id.rc"><strong>N° RC :</strong> <span t-field="doc.partner_id.rc"/></span>
	                    <span t-if="doc.partner_id.ai"><strong><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>AI :</strong> <span t-field="doc.partner_id.ai"/></span>
                    </div>
                    <div style="padding-top:10px;">
                        <span t-if="doc.partner_id.nis"><strong>NIS :</strong>  <span t-field="doc.partner_id.nis" style="text-align:left"/></span>
	                    <span t-if="doc.partner_id.nif"><strong><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>NIF :</strong> <span t-field="doc.partner_id.nif" style="text-align:left"/></span>
                    </div>
	            </div>
                 </div>                  
                </td>
            </tr> 
        </table>

<!--
    <t t-set="address">
        
        </t>
-->
    

        <!--
                 info fiscales 
        -->
          
         
        
        <div class="page">
            <div class="oe_structure"/>

            
            <!-- Is there a discount on at least one line? -->
            <t t-set="lines_to_report" t-value="doc._get_order_lines_to_report()"/>
            <t t-set="display_discount" t-value="any(l.discount for l in lines_to_report)"/>

            <table class="table table-sm o_main_table mt-4">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description" class="text-start">Description</th>
                        <th name="th_quantity" class="text-end">Quantité</th>
                        <th name="th_priceunit" class="text-end">Prix Unitaire</th>
                        <th name="th_discount" t-if="display_discount" class="text-end" groups="product.group_discount_per_so_line">
                            <span>Remise.%</span>
                        </th>
                        
                        <th name="th_subtotal" class="text-end">
                            <span >Montant HT</span>
                           <!-- <span >Montant TTC</span>-->
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="lines_to_report" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" />
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" />

                        <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name"><span t-field="line.name"/></td>
                                <td name="td_quantity" class="text-end">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom"/>
                                </td>
                                <td name="td_priceunit" class="text-end">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-end" groups="product.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                        
                                <td t-if="not line.is_downpayment"
                                    name="td_subtotal" class="text-end o_price_total">
                                    <span t-field="line.price_subtotal" />
                                    <!--
                                    <span t-field="line.price_total" />
                                    -->


                                </td>
                            </t>
                            <t t-elif="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-elif="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section') and not line.is_downpayment">
                            <tr class="is-subtotal text-end">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Sous Total</strong>
                                    <span
                                        t-out="current_subtotal"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>

            <div class="clearfix" name="so_total_summary">
                <div id="total" class="row" name="total">
                    <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                        <table class="table table-sm">
                            <!-- Tax totals -->
                            
                            <t t-set="tax_totals" t-value="doc.tax_totals" />



                   <!--
                        Generic template to display tax totals in pdf reports.
                           Used by invoices, SO and PO.

                      ARGUMENTS:
                            - tax_totals: dict in the form generated by account.move's _get_tax_totals.
                      -->
            <t t-foreach="tax_totals['subtotals']" t-as="subtotal">
                <tr class="border-black o_subtotal">
                    <!-- <td><strong t-esc="subtotal['name']"/></td>-->
                    <td><strong>Total HT</strong></td>
                    <td class="text-end">
                        <span t-att-class="oe_subtotal_footer_separator" t-esc="subtotal['formatted_amount']"/>
                    </td>
                </tr>

                <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
                            <td >
                                    <strong class="mr16">TVA</strong>
                          
                                </td>
                             <td name="td_section_simple_tva" class="text-end">                               
                                    <span                                                                      
                                        t-field="doc.amount_tax"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                    />
                                </td>
                <!--<t t-call="account.tax_groups_totals"/> -->
            </t>

            <t t-set="has_rounding" t-value="'formatted_amount_total_rounded' in tax_totals"/>
            <!--Total amount with all taxes-->
            <tr class="border-black o_total">
                <t t-if="has_rounding"><td><strong>Total TTC</strong></td></t>
                <t t-else=""><td><strong>Total TTC</strong></td></t>
                <td class="text-end">
                    <span t-esc="tax_totals['formatted_amount_total']"/>
                </td>
            </tr>
            <tr t-if="has_rounding">
                <td><strong>Total Rounded</strong></td>
                <td class="text-end">
                    <span t-esc="tax_totals['formatted_amount_total_rounded']"/>
                </td>
            </tr>
                            
                           <!-- <t t-call="account.document_tax_totals"/>-->
                        </table>
                    </div>
                </div>
            </div>

            <div t-if="doc.signature" class="mt-4 ml64 mr4" name="signature">
                <div class="offset-8">
                    <strong>Signature</strong>
                </div>
                <div class="offset-8">
                    <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                </div>
                <div class="offset-8 text-center">
                    <p t-field="doc.signed_by"/>
                </div>
            </div>

            <div>
             <p class="col-xs-8 pull-left" name="montant_en_lettre" style="page-break-inside: always;">
	            <div>
	                <strong>Arrêtée
                    <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                        <span t-if="doc.state not in ['draft','sent']">le présent Bon de commande</span>
                        <span t-if="doc.state in ['draft','sent']">la présente Proforma</span>
                    </t>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <span>la présente Proforma</span>
                    </t>
                    à la somme de :</strong>
	                <p t-esc="doc.get_amount_to_text_dz()"/>
	            </div>
	        </p>
            <br/>
                <!--
                <p t-field="doc.note" name="order_note"/>
                <strong><span >Compte bancaire : </span></strong>
                <span t-field="doc.bank_sending"/>

                -->

                <p t-if="not is_html_empty(doc.payment_term_id.note)">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <!--
                <p t-if="doc.fiscal_position_id and not is_html_empty(doc.fiscal_position_id.sudo().note)"
                    id="fiscal_position_remark">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.sudo().note"/>
                </p>
                -->

            </div>
        </div>
    </t>
</template>


<template id="adicops_report_saleorder">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="adi_dz_reports.adicops_report_saleorder_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>

<template id="adicops_report_saleorder_pro_forma">
    <t t-call="web.html_container">
        <t t-set="is_pro_forma" t-value="True"/>
        <t t-set="docs" t-value="docs.with_context(proforma=True)"/>
        <t t-foreach="docs" t-as="doc">
            <t t-call="adi_dz_reports.adicops_report_saleorder_document" t-lang="doc.partner_id.lang"/>
        </t>
    </t>
</template>


</odoo>
