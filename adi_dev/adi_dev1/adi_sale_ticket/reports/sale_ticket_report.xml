<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="paperformat_ticket" model="report.paperformat">
        <field name="name">Format Ticket de Caisse</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_width">80</field>
        <field name="page_height">297</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">90</field>
    </record>

     <record id="action_report_sale_ticket" model="ir.actions.report">
        <field name="name">Ticket de vente</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">adi_sale_ticket.report_saleticket</field>
        <field name="report_file">adi_sale_ticket.report_saleticket</field>
        <field name="print_report_name">'Ticket - %s' % object.name</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="adi_sale_ticket.paperformat_ticket"/>
    </record>
</odoo>