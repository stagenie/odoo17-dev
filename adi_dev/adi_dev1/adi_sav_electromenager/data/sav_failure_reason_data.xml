<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="failure_reason_parts_unavailable" model="sav.failure.reason">
            <field name="name">Pièces Non Disponibles</field>
            <field name="code">PARTS_NA</field>
            <field name="sequence">10</field>
            <field name="color">3</field>
            <field name="description">Les pièces de rechange nécessaires ne sont pas disponibles sur le marché ou chez le fournisseur</field>
        </record>

        <record id="failure_reason_obsolete_model" model="sav.failure.reason">
            <field name="name">Modèle Obsolète</field>
            <field name="code">OBSOLETE</field>
            <field name="sequence">20</field>
            <field name="color">2</field>
            <field name="description">Le modèle est trop ancien, les pièces ne sont plus fabriquées</field>
        </record>

        <record id="failure_reason_damage_irreparable" model="sav.failure.reason">
            <field name="name">Dommage Irréparable</field>
            <field name="code">IRREPAR</field>
            <field name="sequence">30</field>
            <field name="color">1</field>
            <field name="description">Les dommages sont trop importants pour être réparés de manière économique</field>
        </record>

        <record id="failure_reason_cost_prohibitive" model="sav.failure.reason">
            <field name="name">Coût de Réparation Prohibitif</field>
            <field name="code">COST</field>
            <field name="sequence">40</field>
            <field name="color">4</field>
            <field name="description">Le coût de réparation dépasse la valeur résiduelle de l'appareil</field>
        </record>

        <record id="failure_reason_technical_limitation" model="sav.failure.reason">
            <field name="name">Limitation Technique</field>
            <field name="code">TECH_LIM</field>
            <field name="sequence">50</field>
            <field name="color">5</field>
            <field name="description">La réparation nécessite un équipement spécialisé non disponible chez le réparateur</field>
        </record>

        <record id="failure_reason_manufacturer_only" model="sav.failure.reason">
            <field name="name">Réparation Constructeur Uniquement</field>
            <field name="code">MANUF</field>
            <field name="sequence">60</field>
            <field name="color">6</field>
            <field name="description">Seul le constructeur/fabricant peut effectuer cette réparation (garantie, expertise spéciale)</field>
        </record>

        <record id="failure_reason_safety_concern" model="sav.failure.reason">
            <field name="name">Problème de Sécurité</field>
            <field name="code">SAFETY</field>
            <field name="sequence">70</field>
            <field name="color">1</field>
            <field name="description">La réparation présente des risques de sécurité ou ne peut pas garantir un fonctionnement sûr</field>
        </record>

        <record id="failure_reason_other" model="sav.failure.reason">
            <field name="name">Autre Motif</field>
            <field name="code">OTHER</field>
            <field name="sequence">999</field>
            <field name="color">0</field>
            <field name="description">Autre motif non listé - préciser dans les notes d'échec</field>
        </record>

    </data>
</odoo>
