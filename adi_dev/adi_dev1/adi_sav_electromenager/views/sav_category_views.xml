<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="sav_category_view_tree" model="ir.ui.view">
        <field name="name">sav.category.view.tree</field>
        <field name="model">sav.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="return_count"/>
                <field name="active" optional="hide"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="sav_category_view_form" model="ir.ui.view">
        <field name="name">sav.category.view.form</field>
        <field name="model">sav.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_returns" type="object"
                                class="oe_stat_button" icon="fa-undo">
                            <field name="return_count" widget="statinfo" string="Retours"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archivé" bg_color="text-bg-danger"
                            invisible="active"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Nom de la catégorie"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Description de la catégorie..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="sav_category_view_search" model="ir.ui.view">
        <field name="name">sav.category.view.search</field>
        <field name="model">sav.category</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <filter name="filter_active" string="Actif" domain="[('active', '=', True)]"/>
                <filter name="filter_archived" string="Archivé" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="sav_category_view_kanban" model="ir.ui.view">
        <field name="name">sav.category.view.kanban</field>
        <field name="model">sav.category</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <field name="code"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span><field name="return_count"/> Retours</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="sav_category_action" model="ir.actions.act_window">
        <field name="name">Catégories</field>
        <field name="res_model">sav.category</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle catégorie d'électroménager
            </p>
            <p>
                Les catégories permettent de classer les produits retournés
                (Congélation, Refroidissement, Cuisson, etc.)
            </p>
        </field>
    </record>

</odoo>
