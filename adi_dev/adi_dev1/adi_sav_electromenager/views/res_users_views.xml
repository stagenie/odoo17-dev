<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Extension du formulaire utilisateur -->
    <record id="view_users_form_sav" model="ir.ui.view">
        <field name="name">res.users.form.sav</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="SAV" name="sav">
                    <group>
                        <group string="Affectation SAV">
                            <field name="sav_sales_point_id"
                                   options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
