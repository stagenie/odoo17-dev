<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>    

        <record id="adi_siemtec_purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.siemtec.specifique</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml" >                         
                <xpath expr="//field[@name='partner_ref']" position="after">                    
                    <field name="bank_sending" options="{'no_create': True, 'no_create_edit':True}"/>
                </xpath>
                 <xpath expr="//field[@name='order_line']//tree/field[@name='name']" position="before">
                    <!--<field name="item"/>-->
                    <field name="partnumber"/>
                </xpath>
           
        </field >
        </record >

    </data>

</odoo>