<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="adi_report_purchase_quotation" model="ir.actions.report">
            <field name="name">ADI Demande de Prix</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">adi_dz_reports.adi_report_purchasequotation</field>
            <field name="report_file">adi_dz_reports.adi_report_purchasequotation</field>
            <field name="print_report_name">'Request for Quotation - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>
        
        <record id="adi_action_report_purchase_order" model="ir.actions.report">
            <field name="name">ADI Bon de Commande Fournisseur</field>
            <field name="model">purchase.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">adi_dz_reports.adi_report_purchaseorder</field>
            <field name="report_file">adi_dz_reports.adi_report_purchaseorder</field>
            <field name="print_report_name">
                (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
                'Purchase Order - %s' % (object.name))</field>
            <field name="binding_model_id" ref="model_purchase_order"/>
            <field name="binding_type">report</field>
        </record>

        
    </data>
</odoo>
