<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="adicops_product_template_partnumber_form" model="ir.ui.view">
            <field name="name">product.template.partnumber.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/group/group[2]" position="inside">
                    <field name="partnumber" />
                </xpath>
            </field>
        </record>

        <record id="adicops_product_product_partnumber_form" model="ir.ui.view">
            <field name="name">product.partnumber.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_information']/group/group[2]" position="inside">
                    <field name="partnumber" />
                </xpath>
            </field>
        </record>

        <record id="adicops_product_template_partnumber_tree" model="ir.ui.view">
            <field name="name">product.template.partnumber.tree.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name='standard_price' position="after">
                    <field name="partnumber" optional="show" />                    
                </field>
            </field>
        </record>

        <record id="adicops_product_product_partnumber_tree" model="ir.ui.view">
            <field name="name">product.product.partnumber.tree.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name='standard_price' position="after">
                    <field name="partnumber" optional="show" />                                        
                </field>
            </field>
        </record>
        <record id="adicops_product_product_partnumber_form_easy" model="ir.ui.view">
            <field name="name">product.product.partnumber.form.easy.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='pricing']" position="inside">
                    <field name="partnumber"  />                    
                </xpath>
            </field>
        </record>

        

         <record id="product_template_search_partnumber_view" model="ir.ui.view">
          <field name="name">product.template.search.inherit.product.data.feed.partnumber</field>
          <field name="model">product.template</field>
          <field name="inherit_id" ref="product.product_template_search_view"/>
          <field name="arch" type="xml">
            <xpath expr="//filter[@name='categ_id']" position="after">
                <field name="partnumber" string="Part Number"/>
                <filter string="Part Number" name="partnumber_id" context="{'group_by': 'partnumber'}"/>
            
            </xpath>
          </field>
          </record>

    </data>


    
</odoo>