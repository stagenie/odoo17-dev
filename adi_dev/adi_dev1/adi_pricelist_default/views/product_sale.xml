<odoo>
<record id="view_product_form_inherit" model="ir.ui.view">
    <field name="name">product.template.form.inherit</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_only_form_view"/>
    <field name="arch" type="xml">
        <!-- On cible le sheet pour être sûr -->
               <xpath expr="//sheet/div[hasclass('oe_title')]" position="replace">
                    <div class="oe_title">
                        <div class="o_row">
                            <label for="default_code">Référence</label>
                            <field name="default_code" placeholder="Référence interne"/>
                        </div>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Nom du produit"/>
                        </h1>
                    </div>
                </xpath>
        
         <field name="taxes_id" position="replace">
            <group>
                  <field name="pourcentage_public"/>
                <field name="prix_revendeur"/>
                <field name="pourcentage_revendeur"/>
                <field name="prix_grossiste"/>
                <field name="pourcentage_grossiste"/>
            </group>
        </field>
        <field name="list_price" position="attributes">
            <attribute name="string">Prix de Vente Public</attribute>
        </field>
              

    </field>
</record>

<record id="view_order_form_inherit" model="ir.ui.view">
    <field name="name">sale.order.form.inherit</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
        <field name="partner_id" position="after">
            <field name="type_prix"/>
        </field>
    </field>
</record>



</odoo>

