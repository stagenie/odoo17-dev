<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extension de la vue formulaire de stock.picking pour afficher la qté disponible -->
    <!-- En Odoo 17, move_ids_without_package est remplacé par move_ids -->
    <record id="view_picking_form_qty_available" model="ir.ui.view">
        <field name="name">stock.picking.form.qty.available</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- Ajouter le champ qty_available_source juste après la colonne Produit (product_id) -->
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="qty_available_source" string="Qté Dispo." readonly="1"
                       decoration-danger="is_qty_insufficient"
                       decoration-success="not is_qty_insufficient"/>
                <field name="is_qty_insufficient" column_invisible="1"/>
            </xpath>
        </field>
    </record>

    <!-- Extension de la vue tree des opérations détaillées (stock.move.line) -->
    <record id="view_stock_move_line_detailed_operation_tree_qty" model="ir.ui.view">
        <field name="name">stock.move.line.detailed.operation.tree.qty</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_detailed_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="qty_available_source" string="Qté Dispo." readonly="1"
                       decoration-danger="is_qty_insufficient"
                       decoration-success="not is_qty_insufficient"/>
                <field name="is_qty_insufficient" column_invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
