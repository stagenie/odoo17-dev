<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Todo Task Views -->

    <!-- Tree View -->
    <record id="todo_task_tree" model="ir.ui.view">
        <field name="name">Todo Task Tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree string="Todo Tasks" multi_edit="1" sample="1">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="state" decoration-success="state=='done'" decoration-danger="is_overdue"/>
                <field name="priority"/>
                <field name="due_date"/>
                <field name="assigned_to"/>
                <field name="is_overdue" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="todo_task_form" model="ir.ui.view">
        <field name="name">Todo Task Form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form string="Todo Task">
                <header>
                    <field name="state" widget="statusbar" options="{'clickable': True}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Task title..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="priority"/>
                            <field name="due_date"/>
                            <field name="assigned_to"/>
                            <field name="is_overdue"/>
                        </group>
                        <group>
                            <field name="created_date"/>
                            <field name="completion_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add more details..."/>
                        </page>
                        <page string="Tags">
                            <field name="tags" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="todo_task_kanban" model="ir.ui.view">
        <field name="name">Todo Task Kanban</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" records_draggable="true">
                <field name="name"/>
                <field name="priority"/>
                <field name="due_date"/>
                <field name="state"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <p><strong><t t-out="record.name.value"/></strong></p>
                                <div class="o_kanban_record_bottom">
                                    <span t-if="record.due_date.raw_value"
                                        t-attf-class="badge badge-pill {{record.is_overdue.raw_value ? 'badge-danger' : 'badge-info'}}">
                                        <t t-out="record.due_date.value"/>
                                    </span>
                                    <span t-attf-class="badge badge-pill {{record.priority.raw_value == 'high' ? 'badge-danger' : record.priority.raw_value == 'medium' ? 'badge-warning' : 'badge-success'}}">
                                        <t t-out="record.priority.value"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="todo_task_calendar" model="ir.ui.view">
        <field name="name">Todo Task Calendar</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <calendar string="Todo Tasks" date_start="due_date" color="priority">
                <field name="name"/>
                <field name="priority"/>
            </calendar>
        </field>
    </record>

    <!-- Action Window -->
    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">Todo Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first task!</p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem
        id="menu_todo_root"
        name="Todo"
        sequence="50"
        web_icon="todo_app,static/description/icon.png"/>

    <menuitem
        id="menu_todo_tasks"
        name="Tasks"
        parent="menu_todo_root"
        action="action_todo_task"
        sequence="10"/>

</odoo>
